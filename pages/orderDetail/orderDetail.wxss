.container {
    padding-bottom: 0;
}
.nav {
    background: transparent !important;
}

.title {
    color: #fff !important;
    font-weight: 500 !important;
    font-size: 38rpx !important;
}
.leftIcon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 72rpx;
    color: #fff;
    transform: translateX(-25%);
}

.leftIcon .iconfont {
    font-size: 36rpx;
}

.top-box {
    position: relative;
    overflow: hidden;
    width: 100%;
    /*height: 314px;*/
    background: var(--primary-gradual-color);
}

.top-box-bg {
    display: inline-block;
    width: 100%;
    vertical-align: bottom;
}

/*顶部导航+状态栏占位*/
.top-nav-placeholder {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 11;
    overflow: hidden;
    width: 100%;
}
.copy-top {
    width: 100%;
    background: var(--primary-gradual-color);
}

.status-box {
}

.h144 {
    height: 144rpx;
}
.h248 {
    height: 248rpx;
}
.status-box {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    color: #ffffff;
    font-weight: 400;
}

.icon-status {
    /*text-align: center;*/
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 60rpx;
    font-size: 44rpx;
}

.icon-status .iconfont {
    margin-right: 20rpx;
    font-size: 44rpx !important;
}

.icon-status .status-img {
    margin-right: 20rpx;
    width: 44rpx;
    height: 44rpx;
    vertical-align: bottom;
}

.amount-time {
    margin-top: 30rpx;
    width: 100%;
    height: 56rpx;
    text-align: center;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 56rpx;
}

.amount {
    font-weight: 500;
    font-size: 40rpx;
}

.amount-symbol {
}

.time-left {
    margin-left: 40rpx;
}
.van-count-down {
    display: inline-block !important;
    color: #fff !important;
    font-size: 28rpx !important;
    line-height: 56rpx !important;
}
.content-box {
    position: relative;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    /*padding-top: 176rpx;*/
    padding-bottom: 82rpx;
    width: 100%;
    background: var(--background-color);
}

.bottom-btn-show {
    padding-bottom: 160rpx;
}

.info-wrap {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    margin: 24rpx auto 0;
    width: 100%;
    border-radius: 30rpx;
    background-color: #fff;
}

.delivery-info {
    display: flex;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    margin-top: -32rpx;
    padding: 38rpx 40rpx 0;
    height: 208rpx;
}
.marginTop32 {
    margin-top: -32rpx;
}
.delivery-info-left {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    padding-top: 6rpx;
    width: 44rpx;
    height: 48rpx;
}
.delivery-info-left .iconfont {
    font-size: 32rpx;
}
.delivery-info-right {
    flex: 1;
}
.receiver-name-tel {
    height: 44rpx;
    color: var(--primary-color-text);
    font-weight: 500;
    font-size: 32rpx;
    line-height: 44rpx;
}
.receiver-tel {
    margin-left: 20rpx;
}
.receiver-address {
    margin-top: 20rpx;
    width: 100%;
    color: var(--primary-color-text);
    font-weight: 300;
    font-size: 24rpx;
    line-height: 34rpx;
}
/*订单商品-列表*/
.order-goods-box {
    padding: 48rpx 30rpx 8rpx;
}

.order-amount-box,
.order-no-time-box {
    padding: 30rpx;
}

.order-amount-box .amount-item,
.order-no-time-box .no-time-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 30rpx;
    width: 100%;
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
}
.order-no-time-box .no-time-item {
    margin-bottom: 26rpx;
    height: 48rpx;
    line-height: 48rpx;
}

.order-no-time-box .no-time-item:last-child {
    margin-bottom: 0;
}

.order-amount-box .amount-item .amount-value {
    font-weight: 500;
    font-family: PingFangSC-Medium, PingFang SC;
}
.order-no-time-box .no-time-item .no-time-value {
    display: flex;
    justify-content: flex-end;
    width: 530rpx;
    word-break: break-all;
    font-weight: 400;
}
.order-no-time-box .no-time-item .no-time-name {
    width: 160rpx;
}

.real-payment {
    width: 100%;
    height: 56rpx;
    text-align: right;
    line-height: 56rpx;
}

.real-payment-text {
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 28rpx;
}

.real-payment .amount-symbol {
    color: var(--features-color-text);
    font-size: 28rpx;
}

.amount-value-all {
    color: var(--features-color-text);
    font-weight: 500;
    font-size: 40rpx;
}

/*未付款订单底部按钮容器--*/
.bottom-box {
    position: fixed;
    bottom: 0;
    left: 0;
    padding: 0 0 env(safe-area-inset-bottom);
    width: 100%;
    height: 100rpx;
    background: #fff;
    box-shadow: 0 -1px 0 0 rgba(0, 0, 0, 0.08);
}
.bottom-btn-box {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    padding: 0 10rpx;
    width: 100%;
    height: 100rpx;
}

.bottom-box .order-btn {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    margin-right: 20rpx;
    width: 216rpx !important;
    font-weight: 400;
    font-size: 28rpx !important;
}

.bottom-box .btn-cancel-order {
    /* border: 2rpx solid var(--liner-color-btn-grey) !important;
    color: var(--liner-color-btn-grey) !important; */
}

.operating-box {
    margin-bottom: 40rpx;
    width: 100%;
    color: var(--tip-color-text-88) !important;
    text-align: right;
}

.operating-box > .order-btn {
    margin-right: 20rpx;
}

.btn-operating {
    width: 160rpx !important;
    /* border: 2rpx solid var(--liner-color-btn-grey) !important;
    color: var(--liner-color-btn-grey) !important; */
}
.operating-box .van-button--normal {
    padding: 0 !important;
}

.operating-box .van-button--round.van-button--normal {
    height: 64rpx !important;
}
.operating-box .van-button {
    height: 100% !important;
    line-height: 1 !important;
}
/*dialog弹出框*/
.van-dialog {
}
.van-button--large {
    width: 100% !important;
}
.dialog-content {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 0 30rpx;
    height: 218rpx;
    text-align: center;
}
.dialog-content-text {
    width: 100%;
    color: var(--primary-color-text);
    text-align: center;
    font-weight: 500;
    font-size: 32rpx;
    line-height: 44rpx;
}
.dialog-button-box {
    display: flex;
    width: 100%;
    height: 85rpx;
    border-top: 1rpx solid var(--tip-color-text-d8);
}
.btn-cancel,
.btn-sure {
    box-sizing: border-box;
    width: 50%;
    height: 100%;
    border: none;
    color: var(--primary-color-text);
    text-align: center;
    font-weight: 400;
    font-size: 32rpx;
    line-height: 85rpx;
}
.btn-cancel:active,
.btn-sure:active {
    background: rgba(0, 0, 0, 0.15);
}
.border-right {
    border-right: 1rpx solid var(--tip-color-text-d8);
}
.width-100 {
    width: 100%;
}
.back-home {
    position: fixed;
    right: 40rpx;
    bottom: 360rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    background: var(--primary-color);
    /* box-shadow: 0 8rpx 16rpx 0 rgba(251, 96, 144, 0.6); */
}
.icon-index {
    color: #fff;
    font-size: 44rpx !important;
}

.remark-label {
    width: 600rpx;
    text-align: end;
    font-size: 28rpx;
}
.discount-wrap-order-detail {
    display: flex;
    box-sizing: border-box;
    margin-top: 16rpx;
    padding-left: 156rpx;
    width: 100%;
    height: 88rpx;
}
.discount-wrap-order-detail .discount-box-order-detail {
    display: flex;
    align-items: center;
    padding: 0 20rpx 0 12rpx;
    min-width: 280rpx;
    height: 58rpx;
    border-radius: 10rpx;
    background: rgba(var(--primary-color-opacity), 0.08);
    font-size: 24rpx;
    line-height: 36rpx;
}
.discount-text {
    height: 34rpx;
}
.member-icon {
    display: inline-block;
    width: 34rpx;
    height: 34rpx;
    vertical-align: middle;
}
.margin-left-12 {
    margin-left: 12rpx;
}
.copy-button {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 12rpx;
    margin-left: 0;
    padding: 12rpx;
    width: 76rpx;
    height: 48rpx;
    border-radius: 8rpx;
    background: #ffffff;
    box-shadow: 0px 0px 8rpx 0px rgba(0, 0, 0, 0.15);
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 26rpx;
    line-height: 48rpx;
}
.button-hover {
    opacity: 0.8;
}
.marginRight20 {
    margin-right: 20rpx;
}
