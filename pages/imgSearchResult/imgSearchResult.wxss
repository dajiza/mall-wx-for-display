.container {
    background: #fff;
}
.nav {
    background: #fff;
}

.title {
    color: #333333 !important;
    font-weight: 500 !important;
    font-size: 38rpx !important;
}

.leftIcon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 72rpx;
    color: #333333;
    transform: translateX(-25%);
}
.leftIcon .iconfont {
    font-size: 36rpx;
}
.content-box {
    width: 100%;
    /*padding-bottom: 100rpx;*/
}
.search-img {
    width: 100%;
    height: 500rpx;
    overflow: hidden;
}

/*商品列表*/
.goods-list {
    position: relative;
    box-sizing: border-box;
    margin: -160rpx auto 0;
    padding: 12rpx 30rpx 40rpx;
    width: 100vw;
    border-radius: 40rpx 40rpx 0px 0px;
    background-color: #ffffff;
}
.goods-list .subject {
    padding: 36rpx 0;
    text-align: center;
    font-size: 28rpx;
}
.goods-list-content {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    width: 100%;
}
.goods-list .goods-item-box {
    display: inline-block;
    overflow: hidden;
    /*margin-right: 30rpx;*/
    margin-bottom: 30rpx;
    width: 330rpx;
    height: 468rpx;
    border-radius: 20rpx;
    background: #ffffff;
    box-shadow: 0 6px 12px 0 rgba(66, 18, 33, 0.08);
}
.goods-list .no-margin {
    margin-right: 0;
}
.goods-list .goods-item-box .goods-img {
    display: block;
    margin-bottom: 20rpx;
    width: 330rpx;
    height: 330rpx;
    vertical-align: bottom;
}
.goods-name {
    overflow: hidden;
    box-sizing: border-box;
    padding: 0 10rpx;
    width: 100%;
    height: 42rpx;
    color: var(--primary-color-text);
    text-overflow: ellipsis;
    text-shadow: 0px 6px 12px rgba(66, 18, 33, 0.08);
    white-space: nowrap;
    font-weight: 400;
    font-size: 30rpx;
    line-height: 42rpx;
}
.goods-price {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    margin-top: 12rpx;
    padding: 0 10rpx;
    height: 44rpx;
    color: var(--primary-color-text);
    text-shadow: 0px 6px 12px rgba(66, 18, 33, 0.08);
    font-weight: 500;
    font-size: 32rpx;
    line-height: 44rpx;
}
.goods-price .pay-num {
    color: var(--secondary-color-text);
    font-size: 22rpx;
}

/*右侧滑出*/
.popup-box {
    width: 650rpx;
    height: 100%;
    background: #ffffff;
}

.popup-content-box {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
    height: 100%;
    background: var(--background-color);
}

.all-attr-box {
    /*padding-bottom: 60rpx;*/
    /*background: var(--background-color);*/
}

.placeholder-box {
    width: 100%;
    height: 46rpx;
}

/*重置-确认按钮*/
.bottom-btn-box {
    position: absolute;
    bottom: 0;
    left: 0;
    padding-bottom: env(safe-area-inset-bottom);
    width: 100%;
    height: 100rpx;
    background: #ffffff;
    box-shadow: 0 -1px 0 0 rgba(0, 0, 0, 0.06);
}
.bottom-box-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    padding: 0 40rpx 2rpx;
    width: 100%;
    height: 100rpx;
}

/*空列表*/
.empty-list {
    display: flex;
    align-items: center;
    flex-direction: column;
    padding-top: 160rpx;
    width: 100%;
}
.empty-img {
    display: inline-block;
    width: 202rpx;
    height: 224rpx;
    vertical-align: bottom;
}
.empty-text {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    margin-top: 40rpx;
    padding-right: 36rpx;
    width: 100%;
    color: var(--primary-color);
    text-align: center;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 30rpx;
}
.van-loading {
    padding: 20rpx 0 10rpx;
    width: 100%;
}
.no-more {
    padding: 20rpx 0 10rpx;
    width: 100%;
    color: var(--secondary-color-text);
    text-align: center;
    font-size: 22rpx;
}
