/* pages/share/share.wxss */
page {
    overflow: hidde;
    box-sizing: border-box;
    height: 100vh;
    background-color: #ffffff;
}
/* 
::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
    color: transparent;
} */

.container {
    justify-content: initial;
}

.poster-wrap-box {
    position: absolute;
    top: var(--poster-top--);
    bottom: var(--poster-bottom--);
    width: 100%;
}

.poster {
    position: relative;
    height: 100%;
}

.goods-poster-content {
    position: absolute;
    top: 0;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
}

.goods-poster-content-image-box {
    width: 670rpx;
    height: 904rpx;
    border-radius: 30rpx;
    background: #ffffff;
    box-shadow: 0px 12rpx 24rpx 0px rgba(0, 0, 0, 0.08);
}

.shop-poster-content {
    position: absolute;
    top: 0;
    bottom: 184rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
}

.shop-poster-content-image-box {
    width: 670rpx;
    height: 800rpx;
    border-radius: 30rpx;
    box-shadow: 0px 12rpx 24rpx 0px rgba(0, 0, 0, 0.08);
}

.poster-content-image {
    width: inherit;
    height: inherit;
    border-radius: 30rpx;
}

.scroll-wrap-box {
    position: absolute;
    bottom: 0;
    padding-left: 40rpx;
    height: 184rpx;
    white-space: nowrap;
}

.scroll-item {
    display: inline-block;
    width: 168rpx;
    height: 184rpx;
    vertical-align: middle;
}

.scroll-item .item-img {
    width: 152rpx;
    height: 180rpx;
    border-radius: 14rpx;
}

.scroll-item .checked {
    border: 2rpx solid var(--primary-color);
}

.scroll-item .unchecked {
    border: 2rpx solid transparent;
}

.bottom-button-container {
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 166rpx;
    background-color: transparent;
}

.bottom-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 690rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: var(--primary-gradual-color);
    box-shadow: 0px 6rpx 12rpx 0px var(--secondary-background);
    color: #ffffff;
    line-height: 88rpx;
}

.bottom-button-container-label {
    height: 40rpx;
    color: #ffffff;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
}

.botton-hover {
    opacity: 0.8;
}

.dialog-index--van-dialog__confirm {
    width: 100% !important;
    color: var(--primary-color-text) important;
    font-weight: 400;
    font-size: 32rpx;
}

.dialog-index--van-dialog__cancel {
    width: 100% !important;
    color: var(--primary-color-text) important;
    font-weight: 400;
    font-size: 32rpx;
}

.van-dialog__message {
    color: var(--primary-color-text);
    font-weight: 500;

    --dialog-message-font-size: 32rpx;
    --dialog-message-line-height: 44rpx;
}

.van-dialog__button {
    display: flex;
    justify-content: center;
}
