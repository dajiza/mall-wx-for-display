.nav {
    background: #fff;
}

.title {
    color: #333333 !important;
    font-weight: 500 !important;
    font-size: 38rpx !important;
}

.login-label {
    margin-top: 40rpx;
    color: #333333;
    font-weight: 500;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
}
.tip {
    margin-top: 200rpx;
    color: #333333;
    font-weight: 500;
    font-size: 32rpx;
    line-height: 50rpx;
}

.cancel-button {
    margin-top: 24rpx;
    width: 600rpx !important;
    height: 88rpx !important;
    color: #fff;

    --primary-color-btn: #c3c3c3;
    --button-primary-background-color: #c3c3c3;
    --button-primary-border-color: #c3c3c3;
}
