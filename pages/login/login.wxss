/* miniprogram/pages/login/login.wxss */
.container {
    min-height: 100vh;
}

.main {
    display: flex;
    align-items: center;
    flex-direction: column;
    width: 100%;
    text-align: center;
}

.img {
    overflow: hidden;
    margin-top: 240rpx;
    width: 168rpx;
    height: 168rpx;
    border-radius: 38rpx;
}

.avator {
    width: 160rpx;
    height: 160rpx;
}

.big-btn {
    margin-top: 362rpx;
    width: 600rpx !important;
    height: 88rpx !important;
    color: #fff;

    --primary-color-btn: #27c05e;
    --button-primary-background-color: #27c05e;
    --button-primary-border-color: #27c05e;
}

.agreement {
    margin-top: 30rpx;
    color: #969696;
    font-size: 24rpx;
}

.document {
    color: #222;
}

