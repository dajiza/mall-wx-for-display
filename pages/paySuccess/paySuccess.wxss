/* pages/paySuccess.wxss */
.nav {
    background: transparent !important;
}
.nav-title {
    color: #fff !important;
    font-weight: 500;
    font-size: 38rpx !important;
}
.leftIcon .iconfont {
    font-size: 36rpx;
}
.refund-back {
    color: #fff;
}

.header {
    width: 100%;
    height: 460rpx;
    background: var(--primary-gradual-color);
}

.header .info {
    display: flex;
    margin: 188rpx 0 0 182rpx;
    color: #fff;
}
.header .success-icon {
    width: 148rpx;
    height: 130rpx;
}
.header .text {
    padding-left: 20rpx;
}
.header .text .text1 {
    padding-top: 18rpx;
    font-weight: 600;
    font-size: 44rpx;
}
.header .text .text2 {
    font-weight: 400;
    font-size: 32rpx;
}

.detail {
    display: flex;
    align-items: center;
    flex-direction: column;
    margin-top: -78rpx;
    width: 100%;
}
.detail .line {
    width: 710rpx;
    height: 36rpx;
}
.detail .content {
    width: 670rpx;
    border-radius: 0px 0px 10rpx 10rpx;
    background-color: #fff;
    box-shadow: 0px 8rpx 16rpx 0px rgba(0, 0, 0, 0.08);
}
.detail .content .total {
    padding: 16rpx 0 28rpx;
    border-bottom: 2rpx dashed #efefef;
    text-align: center;
    font-weight: 600;
    font-size: 60rpx;
}
.detail .content .total .symbol {
    font-weight: 400;
    font-size: 40rpx;
}
.detail .content .list {
    padding: 40rpx 40rpx 50rpx;
    font-weight: 400;
    font-size: 28rpx;
}
.detail .content .list .item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 30rpx;
}
.btn-warp {
    width: 100%;
    text-align: center;
}
.custom-submit-btn {
    width: 690rpx !important;
}
.btn-index {
    margin: 100rpx auto 40rpx;
}
