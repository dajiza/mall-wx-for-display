    height: 68rpx;
    border-radius: 52rpx;
    background: var(--background-color);
}

.pop-good-price-sku .goods-label-content {
    overflow: hidden;
    width: 310rpx;
    color: var(--tip-color-text);
    text-overflow: ellipsis;
    white-space: nowrap;
    font-weight: 400;
    font-size: 24rpx;
    line-height: 34rpx;
}
.pop-button-box {
    display: flex;
    justify-content: space-between;
    margin-top: 50rpx;
    width: 100%;
}
.pop-button-box .btn-cancel,
.pop-button-box .btn-confirm {
    width: 272rpx !important;
    height: 80rpx !important;
    border: 0px solid #ebedf0 !important;
    border-radius: 40rpx !important;
    background: linear-gradient(90deg, #d6dee9 0%, #b3bac1 100%) !important;
    box-shadow: 0px 6rpx 12rpx 0px rgba(185, 185, 185, 0.5);
    color: #ffffff !important;
