.invalid-tip {
    position: absolute;
    right: 0;
    bottom: 0;
    display: inline-block;
    padding: 8rpx 22rpx;
    border-radius: 26rpx;
    background: var(--tip-color-text-88);
    color: #ffffff;
    font-weight: 400;
    font-size: 24rpx;
    line-height: 34rpx;
}

.sku-check-tip {
