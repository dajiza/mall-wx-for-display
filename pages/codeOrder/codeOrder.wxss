    --checkbox-label-margin: 16rpx !important;
    --checkbox-label-color: var(--primary-color-text) !important;
}

.van-checkbox__icon--checked {
    background-color: #fff !important;
    color: var(--primary-color) !important;

    --checkbox-checked-icon-color: var(--primary-color) !important;
}

.van-checkbox__icon {
    --checkbox-border-color: var(--primary-color) !important;
}

.custom-check-box-icon {
    display: -webkit-flex;
    display: flex;
    overflow: hidden;
    -webkit-align-items: center;
    align-items: center;
    width: 40rpx;
    height: 40rpx;
    color: var(--primary-color);
    font-size: 38rpx;

    -webkit-user-select: none;
    user-select: none;
}

.scan-goods-popup {
    width: 624rpx;
    height: 874rpx;
    border-radius: 30rpx;
    background: #ffffff;
}
.scan-goods-container {
    position: relative;
    box-sizing: border-box;
    height: 100%;
}
.pop-img-box {
    width: 100%;
    height: 468rpx;
    border-radius: 30rpx 30rpx 0 0;
    background: #f2f2f2;
}
.pop-goods-info {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    padding: 30rpx;
    width: 100%;
}
.pop-good-title {
    color: #564b4e;
    font-weight: 500;
    font-size: 32rpx;
    font-family: PingFangSC-Medium, PingFang SC;
