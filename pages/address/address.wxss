page {
    overflow: hidde;
    box-sizing: border-box;
    height: 100vh;
    background-color: #ffffff;
}

.container {
    justify-content: initial;
}

.address-list {
    padding-bottom: 168rpx;
    width: 100%;
}

.a-address {
    position: relative;
    background: #fff;
}

.a-address-divider-container {
    position: absolute;
    bottom: 0;
    width: 100%;
}

.a-address-divider {
    --divider-margin: 0px 40rpx;
    --divider-line-height: 2rpx;
    --divider-border-color: var(--divider-background-color);
}

.content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 34rpx 40rpx;
}

.name-phone-container {
    position: relative;
    display: flex;
    align-items: center;
    color: var(--primary-color-text);
    font-weight: 500;
    font-size: 36rpx;
    line-height: 50rpx;
}

.address-detail-container {
    position: relative;
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    margin-top: 20rpx;
}

.address-detail {
    width: 600rpx;
    color: var(--primary-color-text);
    font-weight: 300;
    font-size: 24rpx;
    line-height: 34rpx;
}

.default-address {
    margin-left: 12rpx;
    padding: 4rpx 16rpx;
    height: 28rpx;
    border-radius: 18rpx;
    background: var(--primary-color);
    color: #ffffff;
    font-weight: 400;
    font-size: 20rpx;
    line-height: 28rpx;
}

.address-list-empty-container-show {
    display: flex !important;
}

.address-list-empty-container {
    display: none;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    margin-top: 240rpx;
    width: 100%;
}

.address-list-empty-view {
    width: 162rpx;
    height: 176rpx;
}

.address-list-empty-tip {
    margin-top: 40rpx;
    color: var(--primary-color);
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
}

.bottom-button-container {
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 168rpx;
    background-color: #fff;
}

.bottom-button {
    position: fixed;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 690rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: var(--primary-color-btn);
    color: #ffffff;
    line-height: 88rpx;
}

.bottom-button-container-label {
    height: 40rpx;
    color: #ffffff;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
}

.botton-hover {
    opacity: 0.8;
}
