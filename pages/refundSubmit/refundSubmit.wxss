.custom-reason {
    border-radius: 30rpx 30rpx 0 0;
    background: #ffffff;
}
.custom-reason .reason-wrap .title {
    margin-top: 30rpx;
    text-align: center;
    font-size: 32rpx;
}
.custom-reason .reason-wrap .item-list {
    padding: 60rpx 30rpx 0;
}
.custom-reason .reason-wrap .item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 60rpx;
    font-size: 32rpx;
    line-height: 40rpx;
}
.custom-reason .reason-wrap .item .iconfont {
    color: var(--features-color-text);
    font-size: 40rpx;
}
.custom-reason .reason-wrap .item .checked {
    font-size: 32rpx;
}

