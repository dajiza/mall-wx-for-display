/* pages/refund/refund.wxss */
.container {
    position: relative;
    /* min-height:auto; */
    padding-bottom: 200rpx;
    /* height: calc(100vh - 200rpx); */
    background-color: var(--background-color);
}
.nav {
    background: #fff !important;
}
.nav-title {
    color: #333 !important;
    font-weight: 500;
    font-size: 38rpx !important;
}
.leftIcon .iconfont {
    font-size: 36rpx;
}
.van-nav {
    width: 100%;
    background: #fff !important;
}
.goods-list {
    box-sizing: border-box;
    /* margin-top: 24rpx; */
    padding: 20rpx 30rpx 0;
    width: 100%;
    border-radius: 0px 0px 30rpx 30rpx;
    background-color: #fff;
}
.goods-list .dividing {
    margin-bottom: 30rpx;
}

.operation-wrap {
    box-sizing: border-box;
    margin: 24rpx auto 0;
    padding: 30rpx 30rpx;
    width: 710rpx;
    border-radius: 30rpx;
    background-color: #fff;
}
.upload-img {
    padding-bottom: 20rpx;
}
.refund {
    padding-bottom: 0rpx;
}
.choose-style {
}
.choose-style .dividing {
    margin: 40rpx 0;
}
.choose-style .style-item {
    position: relative;
}
.choose-style .icon-corner {
    position: absolute;
    top: 36rpx;
    right: 0rpx;
    color: var(--tip-color-text-88);
    font-size: 20rpx;
}
.choose-style .subject {
    display: flex;
    line-height: 48rpx;
}
.choose-style .timg .iconfont {
    margin-right: 20rpx;
    color: var(--features-color-text);
    font-size: 48rpx;
}
.choose-style .subject .title {
    font-size: 30rpx;
}
.choose-style .describe {
    margin: 10rpx 0 0 68rpx;
    color: var(--tip-color-text-88);
    font-size: 24rpx;
}

.refund {
    overflow: hidden;
    padding-bottom: 40rpx;
    /* padding: 15rpx 0; */
}

