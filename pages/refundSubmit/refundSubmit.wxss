}
.van-uploader .van-uploader__upload {
    overflow: hidden;
    margin-top: 40rpx;
    border: 2rpx solid var(--tip-color-text-d8);
    border-radius: 12px;
    background-color: #fff;
}
.van-uploader .van-uploader__upload-text {
    color: var(--tip-color-text);
    font-size: 20rpx;
}
.van-uploader .van-uploader__preview .van-uploader__preview-delete {
    padding: 0;
    width: 40rpx;
    height: 40rpx;
    /* top: -10rpx;
    right: -20rpx; */
    background: url(data:image/png;base64,);
    background-size: 100%;
    background-repeat: no-repeat;
}
.van-uploader .van-uploader__preview .van-uploader__preview-delete:after {
    background-color: transparent;
}
.van-uploader .van-uploader__preview .van-uploader__preview-delete .van-uploader__preview-delete-icon {
    display: none;
}
.van-uploader .van-uploader__preview {
    overflow: hidden;
    margin-top: 30rpx;
    margin-right: 48rpx;
    padding: 10rpx 20rpx 0 0;
}
.van-uploader .van-uploader__preview image {
    border-radius: 12rpx;
}
.van-uploader .van-uploader__preview:last-child {
    margin-right: 0rpx;
}
.submit-btn {
    position: fixed;
    right: 0;
    bottom: 0rpx;
    left: 0;
    /* margin: auto; */
    text-align: center;
}
.custom-submit-btn {
    margin: 0 auto 80rpx;
    width: 690rpx !important;
}

.customize-cell .detail {
    position: relative;
    padding-right: 44rpx;
    width: 100%;
}
.customize-cell .detail .corner {
    position: absolute;
    top: 50%;
    right: 0;
    bottom: 0;
    margin: auto;
    color: var(--tip-color-text);
    font-size: 20rpx;
}
.customize-cell .info {
    display: flex;
    justify-content: space-between;
}
.customize-cell .location {
    margin-top: 20rpx;
}

/*dialog弹出框*/
.van-dialog {
}
.van-button--large {
    width: 100% !important;
}
.dialog-content {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 0 30rpx;
    height: 218rpx;
    text-align: center;
}
.dialog-content-text {
    width: 100%;
    color: var(--primary-color-text);
    text-align: center;
    font-weight: 500;
    font-size: 32rpx;
    line-height: 44rpx;
}
.dialog-button-box {
    display: flex;
    width: 100%;
    height: 85rpx;
    border-top: 1rpx solid var(--tip-color-text-d8);
}
.btn-cancel,
.btn-sure {
    box-sizing: border-box;
    width: 50%;
    height: 100%;
    border: none;
    color: var(--primary-color-text);
    text-align: center;
    font-weight: 400;
    font-size: 32rpx;
    line-height: 85rpx;
}
.btn-cancel:active,
.btn-sure:active {
    background: rgba(0, 0, 0, 0.15);
}
.border-right {
    border-right: 1rpx solid var(--tip-color-text-d8);
}
.width-100 {
    width: 100%;
}
