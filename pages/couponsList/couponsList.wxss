/* packageAgent/couponsList/couponsList.wxss */
/* pages/wallet/wallet.wxss */
.container {
    position: relative;
    /* padding-bottom: 200rpx; */
    background: var(--background-color);
    color: #333333;
}
.nav {
    background: var(--primary-color-btn);

    --nav-bar-background-color: var(--primary-color-btn);
}
.nav-title {
    color: #fff !important;
    font-weight: 500;
    font-size: 38rpx !important;
}
.leftIcon .iconfont {
    color: #fff;
    font-size: 36rpx;
}

/*订单状态tabs栏*/
.order-tabs {
    position: fixed;
    left: 0;
    z-index: 21;
    width: 100%;
    /* height: 100rpx; */
    background: var(--primary-color-btn);
    color: #fff;
}

.order-tabs .van-tabs__scroll {
    background: transparent;
}
.order-tabs .van-tab {
    color: #ffffff;
    font-weight: 400;
    font-size: 32rpx;
}
.order-tabs .van-tab--active {
    font-weight: 600;
}
.order-tabs .van-tabs__line {
    width: 20rpx !important;
    height: 8rpx !important;
    background: url(data:image/png;base64,);
    background-size: 20rpx 8rpx;
}

.list {
    display: flex;
    align-items: center;
    flex-direction: column;
    padding-top: 128rpx;
    width: 100%;
}

.empty {
    display: flex;
    align-items: center;
    flex-direction: column;
}
.empty .empty-img {
    margin-top: 240rpx;
    margin-bottom: 30rpx;
    width: 194rpx;
    height: 200rpx;
}
.empty .text {
    color: var(--primary-color);
    font-weight: 400;
    font-size: 28rpx;
}
