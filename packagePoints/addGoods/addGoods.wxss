page {
    background: var(--background-color);
}

.container {
    background: var(--background-color);
}

.nav {
    background: #fff;
}

.title {
    color: #333333 !important;
    font-weight: 500 !important;
    font-size: 38rpx !important;
}

.leftIcon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 72rpx;
    color: #333333;
    transform: translateX(-25%);
}

.leftIcon .iconfont {
    font-size: 36rpx;
}

.goods-info-wrap {
    box-sizing: border-box;
    margin: 30rpx 20rpx;
    padding: 40rpx;
    padding: 40rpx 28rpx 40rpx 40rpx;
    width: 710rpx;
    border-radius: 20rpx;
    background: #ffffff;
}

.goods-name-input {
    margin-right: 12rpx;
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 32rpx;
    line-height: 44rpx;
}

.goods-name-placeholder {
    color: #b2b2b2;
    font-weight: 400;
    font-size: 32rpx;
    line-height: 44rpx;
}

.goods-image-upload-wrap {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    padding: 88rpx 0 100rpx 0;
}

.goods-image-upload-wrap .goods-image {
    width: 200rpx;
    height: 200rpx;
    border-radius: 4rpx;
}

.goods-image-upload-wrap .goods-image-add {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 200rpx;
    height: 200rpx;
    border-radius: 4rpx;
    background: rgba(0, 0, 0, 0.04);
}

.div-line {
    margin-right: 12rpx;
    height: 1rpx;
    background: var(--divider-background-color);
}

.input-wrap {
    display: flex;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-right: 12rpx;
    padding: 44rpx 20rpx;
}

.input-label {
    width: 250rpx;
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 30rpx;
    line-height: 42rpx;
}

.info-input {
    width: 100%;
    text-align: right;
}

.info-input-placeholder {
    color: #b2b2b2;
    font-weight: 400;
    font-size: 30rpx;
    line-height: 42rpx;
}

.add-goods-attr-wrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    margin: 0 20rpx;
    padding: 34rpx 30rpx;
    width: 710rpx;
    border-radius: 20rpx;
    background: #ffffff;
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 32rpx;
    line-height: 44rpx;
}

.add-goods-attr-image {
    width: 52rpx;
    height: 52rpx;
}

.goods-attr-item {
    position: relative;
    display: flex;
    box-sizing: border-box;
    box-sizing: border-box;
    margin: 0 20rpx;
    margin-top: 30rpx;
    width: 710rpx;
    border-radius: 20rpx;
    background: #ffffff;
}

.attr-input-wrap {
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    margin-top: 24rpx;
    margin-bottom: 24rpx;
    margin-left: 20rpx;
    padding: 20rpx;
    height: 80rpx;
    border-radius: 10rpx;
    background: #efefef;
}

.attr-info-input {
    width: 100%;
}

.attr-name-input-wrap {
    width: 240rpx;
}

.attr-value-input-wrap {
    margin-left: 10rpx;
    width: 420rpx;
}

.hide {
    display: none !important;
}

.bottom-button-container {
    display: flex;
    width: 100%;
}

.bottom-button-container-fixed {
    position: fixed;
    bottom: 0;
    z-index: 100;
}

.bottom-button {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    width: 690rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: var(--primary-color-btn);
    color: #ffffff;
    line-height: 88rpx;
}

.bottom-button-disable {
    background: linear-gradient(90deg, #d6dee9 0%, #b3bac1 100%) !important;
}

.botton-hover {
    opacity: 0.8;
}

.bottom-button-container-label {
    height: 40rpx;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
}

.attr-delete {
    position: absolute;
    right: 0;
    padding-bottom: 50rpx;
    padding-left: 40rpx;
    width: 36rpx;
    height: 36rpx;
}

.edit-buttons-wrap {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 30rpx;
    width: 100%;
}

.delete-bottom-button {
    width: 216rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: linear-gradient(90deg, #d6dee9 0%, #b3bac1 100%);
}

.off-bottom-button {
    width: 216rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: #ffa14f;
}

.save-bottom-button {
    width: 216rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: var(--primary-color-btn);
}

.amount-input-placeholder {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    visibility: hidden;
}

.goods-image-delete {
    position: absolute;
    top: 0;
    right: 0;
    padding-bottom: 50rpx;
    padding-left: 40rpx;
    width: 36rpx;
    height: 36rpx;
}
