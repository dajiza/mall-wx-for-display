page {
  background: var(--background-color);
}

.container {
  background: var(--background-color);
}

.nav {
  background: #fff;
}

.title {
  color: #333333 !important;
  font-weight: 500 !important;
  font-size: 38rpx !important;
}

.leftIcon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 72rpx;
  color: #333333;
  transform: translateX(-25%);
}

.leftIcon .iconfont {
  font-size: 36rpx;
}

.header-fixed {
  position: fixed;
  left: 0;
  z-index: 2;
  width: 100%;
}

/*搜索框*/
.search-box {
  z-index: 2;
  display: flex;
  justify-content: space-between;
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 14rpx 30rpx;
  width: 100%;
  height: 100rpx;
  background: #fff;
}

.search-box .search-bar {
  position: relative;
  width: 100%;
  height: 100%;
}

.search-box .cancel-btn {
  height: 72rpx;
  color: var(--primary-color-text);
  font-weight: 400;
  font-size: 30rpx;
  line-height: 72rpx;
}

.search-box .search-bar .search-input {
  -webkit-box-sizing: border-box;
  box-sizing: border-box;
  padding: 0 72rpx;
  width: 100%;
  height: 100%;
  border-radius: 36rpx;
  background: var(--search-input);
  color: var(--primary-color-text);
  font-size: 26rpx;
}

.search-box .icon-glass {
  position: absolute;
  top: 16rpx;
  left: 28rpx;
  color: var(--secondary-color-text);
  font-size: 36rpx;
}

.search-box .close-icon {
  position: absolute;
  top: 6rpx;
  right: 18rpx;
  padding: 10rpx;
}

.search-input-placeholder {
  color: var(--secondary-color-text);
  font-weight: 400;
  font-size: 26rpx;
}

.coupon-list {
  width: 100%;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.coupon-item {
  position: relative;
  padding-bottom: 24rpx;
}

.coupon-item-bg {
  width: 690rpx;
  height: 200rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.coupon-label {
  width: 220rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.coupon-label-price-wrap {
  justify-content: center;
  display: flex;
}

.coupon-label-price-unit {
  font-size: 40rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 48rpx;
  height: 48rpx;
  margin-top: 34rpx;
}

.coupon-label-price {
  font-size: 80rpx;
  font-weight: bold;
  color: #FFFFFF;
  line-height: 94rpx;
}

.coupon-label-limit {
  font-size: 24rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 34rpx;
}

.coupon-label-discount {
  font-size: 20rpx;
  font-weight: 300;
  color: #FFFFFF;
  line-height: 28rpx;
}

.coupon-content {
  width: 450rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  padding-left: 30rpx;
  justify-content: center;
  box-sizing: border-box;
}

.coupon-content-tip {
  font-size: 32rpx;
  font-weight: 500;
  color: var(--primary-color-text);
  line-height: 44rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

.coupon-content-second-tip {
  font-size: 24rpx;
  font-weight: 400;
  color: var(--primary-color-text);
  line-height: 34rpx;
}

.coupon-points {
  background: rgba(254, 206, 10, 0.2);
  border-radius: 28rpx;
  display: flex;
  height: 56rpx;
  justify-content: center;
  align-items: center;
  padding-left: 10rpx;
  padding-right: 20rpx;
}


.empty-list-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: var(--scan-btn-background);
}

.empty-list-tip {
  font-size: 28rpx;
  font-weight: 400;
  color: var(--scan-btn-background);
  line-height: 40rpx;
}


.empty-image-wrap {
  margin: 0 auto;
  width: 234rpx;
  height: 254rpx;
  margin-top: 270rpx;
}

.empty-image {
  margin-left: 32rpx;
  width: 202rpx;
  height: 224rpx;
}