/* pages/goodsDetail/goodsDetail.wxss */
.container {
    position: relative;
    padding-bottom: calc(130rpx + env(safe-area-inset-bottom));
    background: var(--background-color);
}

.nav {
    background: transparent !important;
}
.nav-show {
    background: #fff !important;
}
.nav-title {
    color: #333 !important;
    font-weight: 500;
    font-size: 38rpx !important;
}
.leftIcon .iconfont {
    font-size: 36rpx;
}
.swiper-wrap {
    position: relative;
    width: 100%;
    height: 560rpx;
}
.swiper {
    width: 100%;
    height: 560rpx;
    background-color: #ffffff;
}
.vedio-wrap {
    width: 100%;
    height: 560rpx;
    background-color: #000;
}
.vedio {
    position: absolute;
    z-index: 11;
    width: 100%;
    height: 520rpx;
}
.dots {
    position: absolute;
    right: 30rpx;
    bottom: 40rpx;
    display: flex;
    justify-content: center;
}
.dots .dot {
    margin: 0 5rpx;
    width: 24rpx;
    height: 8rpx;
    border-radius: 2rpx;
    background: rgba(0, 0, 0, 0.3);
    transition: all 0.6s;
}
.dots .dot.active {
    background: #fff;
}

.goods-detail {
    z-index: 10;
    display: flex;
    align-items: center;
    flex-direction: column;
    margin-top: 24rpx;
    width: 100%;
}
.goods-title-wrap {
    box-sizing: border-box;
    /*box-shadow: 0px 0px 20px 0px rgba(0, 0, 0, 0.1);*/
    margin: 24rpx auto 0;
    padding: 24rpx 30rpx 36rpx;
    width: 710rpx;
    border-radius: 20rpx;
    background-color: #fff;
}
.goods-title-wrap .name-wrap {
    display: flex;
    justify-content: space-between;
}
.goods-title-wrap .name {
    display: -webkit-box;
    /* overflow: hidden; */
    -webkit-box-orient: vertical;
    justify-content: space-between;
    min-height: 78rpx;
    width: 470rpx;
    white-space: inherit;
    font-weight: 500;
    font-size: 32rpx;
    /* -webkit-line-clamp: 2; */
}
.goods-title-wrap .goods-title {
    min-height: 78rpx;
    /* width: 470rpx; */
    font-weight: 500;
    font-size: 32rpx;
}
.goods-title-wrap .share {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: auto;
    width: 80rpx;
    height: 80rpx;
    border-radius: 40rpx;
    background: var(--primary-color-btn);
}
.goods-title-wrap .share-img {
    position: relative;
    width: 48rpx;
    height: 48rpx;
}
.goods-title-wrap .summary {
    display: flex;
    margin-top: 56rpx;
    line-height: 48rpx;
}
.goods-title-wrap .summary .price {
    display: flex;
    align-items: center;
    color: var(--features-color-text);
    color: #fab001;
    font-weight: 600;
    font-size: 32rpx;
    font-size: 50rpx;
}
.goods-title-wrap .summary .price .coin {
    margin-right: 12rpx;
    width: 48rpx;
    height: 48rpx;
}
.goods-title-wrap .summary .price-num {
    padding-left: 8rpx;
    font-size: 48rpx;
}
.goods-title-wrap .summary .freight {
    flex: 1;
    color: var(--tip-color-text);
    text-align: right;
    font-size: 24rpx;
}
.goods-title-wrap .summary .freight .text {
    padding-left: 12rpx;
    vertical-align: top;
}
.goods-title-wrap .summary .sales {
    flex: 1;
    color: var(--tip-color-text);
    text-align: right;
    font-size: 24rpx;
}
.goods-title-wrap .summary .sales .text {
    padding-left: 40rpx;
    font-size: 28rpx;
}

.specification {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    margin: 24rpx auto 0;
    padding: 36rpx 30rpx;
    width: 710rpx;
    border-radius: 20rpx;
    background: #ffffff;
}
.specification .selected {
    width: 60rpx;
    font-weight: 600;
}
.specification .value {
    margin-left: 10rpx;
    width: 440rpx;
}
.specification .choose-wrap {
    display: flex;
    justify-content: flex-end;
    width: 100rpx;
    height: 100%;
    text-align: right;
}
.specification .choose {
    padding-top: 6rpx;
    width: 32rpx;
    height: 32rpx;
}

.information {
    box-sizing: border-box;
    margin: 24rpx auto 0;
    padding: 24rpx 30rpx;
    width: 710rpx;
    border-radius: 30rpx;
    background: #ffffff;
}
.information .subject {
    font-weight: 600;
    /* font-size: 28rpx; */
}
.information .dividing {
    margin: 24rpx 0 32rpx;
}
.information .item {
    display: flex;
    margin-bottom: 32rpx;
}
.information .item .label {
    flex-shrink: 0;
    width: 120rpx;
    color: var(--tip-color-text);
}

.goods-action {
    position: fixed;
    bottom: 0;
    z-index: 9;
    display: flex;
    /* justify-content: space-between; */
    /* box-sizing: border-box; */
    padding: 0 0 env(safe-area-inset-bottom) 0;
    width: 100%;
    height: 100rpx;
    background-color: #fff;
    box-shadow: 0px -1px 0px 0px rgba(0, 0, 0, 0.08);
    line-height: 100rpx;
}

.goods-action .iconfont {
    margin-top: 12rpx;
    height: 48rpx;
    font-size: 48rpx;
}
.goods-action .pot {
    position: absolute;
    top: 10rpx;
    right: 4rpx;
    padding: 0 8rpx;
    /* width: 24rpx; */
    height: 24rpx;
    border-radius: 24rpx;
    background: var(--primary-color);
    color: #ffffff;
    text-align: center;
    font-size: 20rpx;
    line-height: 24rpx;
}

.goods-action .cart {
    position: relative;
    display: flex;
    align-items: center;
    flex-basis: 60rpx;
    flex-direction: column;
    margin-left: 30rpx;
    line-height: 50rpx;
}
.goods-action .customer {
    position: relative;
    display: flex;
    align-items: center;
    flex-basis: 180rpx;
    flex-direction: column;
    line-height: 50rpx;
}
.goods-action .cart .text {
    font-size: 20rpx;
    line-height: 30rpx;
}
.goods-action .customer .text {
    font-size: 20rpx;
    line-height: 30rpx;
}
.goods-action .favorites {
    position: relative;
    display: flex;
    align-items: center;
    flex-basis: 60rpx;
    flex-direction: column;
    margin-left: 30rpx;
    line-height: 50rpx;
}

.goods-action .favorites .text {
    font-size: 20rpx;
    line-height: 30rpx;
}
.goods-action .favorites .icon-favorites-fill {
    color: var(--primary-color);
}
.goods-action .buy {
    /* flex: 1; */
    margin-right: 30rpx;
    text-align: right;
}
.goods-action .addcart {
    flex: 1;
    margin-right: 20rpx;
    text-align: right;
}
.goods-action .custom-buy {
    flex-grow: 1;
    background-color: var(--primary-color);
    color: #ffffff;
    text-align: center;
    font-weight: 500;
    font-size: 28rpx;
    line-height: 100rpx;
}
.goods-action .custom-buy.disabled {
    background-color: var(--secondary-color-text);
}
.custom-share {
    right: 0;
    bottom: 40rpx !important;
    left: 0;
    margin: auto;
    width: 690rpx !important;
    height: 320rpx;
    border-radius: 30rpx;
    background: #ffffff;
}
.custom-share .share-wrap {
    width: 100%;
    height: 100%;
}
.custom-share .share-wrap .title {
    margin-top: 30rpx;
    color: #333333;
    text-align: center;
    font-size: 32rpx;
}
.custom-share .share-wrap .item-list {
    display: flex;
    justify-content: space-around;
    padding-top: 60rpx;
}
.custom-share .share-wrap .item-list .item {
    display: flex;
    align-items: center;
    flex-direction: column;
}
.custom-share .share-wrap .share-img {
    width: 100rpx;
    height: 100rpx;
}
.custom-share .share-wrap .text {
    padding-top: 12rpx;
    color: #333333;
    font-size: 24rpx;
}

.contact-btn {
    position: absolute;
    top: 0%;
    width: 100rpx;
    height: 100rpx;
    background: transparent !important;
}
.share-btn {
    position: absolute;
    width: inherit;
    height: inherit;
    background: transparent !important;
}
.discount-box {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    margin-top: 20rpx;
    padding-left: 12rpx;
    width: 650rpx;
    height: 58rpx;
    border-radius: 10rpx;
    background: rgba(var(--primary-color-opacity), 0.08);
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 24rpx;
    line-height: 36rpx;
}
.discount-text {
    font-size: 24rpx;
}
.margin-left-12 {
    margin-left: 12rpx;
}
.member-icon {
    display: inline-block;
    width: 34rpx;
    height: 34rpx;
    vertical-align: middle;
}

/* tabs */
.tabs {
    position: fixed;
    z-index: 9;
    width: 100vw;
}

.van-tabs--line .van-tabs__wrap,
.van-tabs__nav {
    height: 94rpx !important;
}

.van-tabs__line {
    width: 52rpx !important;
    height: 8rpx !important;
    border-radius: 0 !important;
    background: var(--primary-gradual-color);
}

.van-tab {
    color: var(--primary-color-text) !important;
    font-size: 28rpx !important;
    line-height: 116rpx !important;
}

.van-tab--active {
    font-weight: 600 !important;
}

.van-tabs--line .van-tabs__wrap {
    padding-bottom: 22rpx !important;
}

.van-tabs__scroll--line {
    height: calc(100% + 22rpx) !important;
}

.order-nav-box {
    width: 375px;
    height: 58px;
    border-radius: 0 0 30rpx 30rpx;
    background: #ffffff;
}

.comment {
    box-sizing: border-box;
    margin: 24rpx auto 0;
    padding: 24rpx 30rpx 40rpx;
    width: 710rpx;
    border-radius: 30rpx;
    background: #ffffff;
}
.comment .subject {
    display: flex;
    align-items: center;
    justify-content: space-between;
    font-weight: 600;
}
.comment .subject .view-all {
    display: flex;
    align-items: center;
    font-weight: 400;
    font-size: 26rpx;
}
.comment .subject .icon-youjiantou {
    margin-left: 8rpx;
    font-size: 20rpx;
}
.comment .dividing {
    margin: 24rpx 0 20rpx;
}
.mp-html {
    margin-top: 40rpx;
}

/* 评论 */
.comment .dividing-comment {
    margin: 40rpx 0;
}
.comment .dividing-comment:nth-last-child(1) {
    display: none;
}
.comment-tabs {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    /* padding: 0 30rpx; */
    margin-bottom: 40rpx;
    width: 100%;
    height: 62rpx;
    border-radius: 0 0 30rpx 30rpx !important;
    background: #fff;
}
.comment-tabs .tab-item {
    display: inline-block;
    margin-right: 24rpx;
    padding: 0 24rpx;
    height: 62rpx;
    border-radius: 36rpx;
    background: #efefef;
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 24rpx;
    line-height: 62rpx;
}
.comment-tabs .tab-selected {
    background: var(--secondary-color);
}
.comment-goods-info {
    display: flex;
    align-items: center;
    flex-direction: column;
    box-sizing: border-box;
    margin-top: 20rpx;
    padding: 20rpx;
    width: 100%;
    height: 176rpx;
    border-radius: 20rpx;
    background: #efefef;
}

.num-box {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 80rpx 0;
}
.num-box .num-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 56rpx;
    height: 56rpx;
    border-radius: 56rpx;
}
.num-box .iconfont {
    font-size: 22rpx;
}
.num-box .num-btn .iconfont {
    color: #fff;
}
.num-box .minus {
    background: linear-gradient(90deg, #d6dee9 0%, #b3bac1 100%);
}
.num-box .plus {
    background: linear-gradient(131deg, #fadcc7 0%, #f6bd87 100%);
}
.num-box .num-input {
}
.num-box .custom-input {
    width: 128rpx;
    height: 56rpx;
    background: var(--divider-border-color);
    text-align: center;
    font-size: 24rpx;
}
