page {
    background: var(--background-color);
}

.container {
    background: var(--background-color);
}

.nav {
    background: #fff;
}

.title {
    color: #333333 !important;
    font-weight: 500 !important;
    font-size: 38rpx !important;
}

.leftIcon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 72rpx;
    color: #333333;
    transform: translateX(-25%);
}

.leftIcon .iconfont {
    font-size: 36rpx;
}

.points-wrap {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    margin: 30rpx auto;
    padding: 40rpx 30rpx;
    width: 710rpx;
    border-radius: 20rpx;
    background: #ffffff;
}

.points-input {
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 30rpx;
    line-height: 42rpx;
}

.points-input-placeholder {
    color: #b2b2b2;
    font-weight: 400;
    font-size: 30rpx;
    line-height: 42rpx;
}

.coupon-wrap {
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    box-sizing: border-box;
    margin: 0 auto;
    padding: 40rpx 30rpx;
    width: 710rpx;
    border-radius: 20rpx;
    background: #ffffff;
}

.coupon-pick-wrap {
    display: flex;
    align-items: center;
}

.coupon-label {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
}

.coupon-detail-div {
    position: absolute;
    top: 120rpx;
    left: 0;
    width: 100%;
    height: 1rpx;
    background: var(--divider-background-color);
}

.coupon-detail-info-wrap {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin-top: 40rpx;
}

.coupon-info-item {
    display: flex;
    align-items: center;
    margin-top: 30rpx;
    width: 322rpx;
}

.coupon-info-item .coupon-info-label {
    width: 130rpx;
    color: #b2b2b2;
    font-weight: 400;
    font-size: 26rpx;
    line-height: 36rpx;
}

.coupon-info-item .coupon-info-value {
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 26rpx;
    line-height: 36rpx;
}

.bottom-button-container {
    position: fixed;
    bottom: 0;
    z-index: 100;
    display: flex;
    flex-direction: column;
    width: 100%;
    background: #ffffff;
}

.botton-hover {
    opacity: 0.8;
}

.bottom-button {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    width: 690rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: var(--primary-color-btn);
    color: #ffffff;
    line-height: 88rpx;
}

.bottom-button-disable {
    background: linear-gradient(90deg, #d6dee9 0%, #b3bac1 100%) !important;
}

.bottom-button-container-label {
    height: 40rpx;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
}

.edit-buttons-wrap {
    display: flex;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 30rpx;
    width: 100%;
}

.delete-bottom-button {
    width: 216rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: linear-gradient(90deg, #d6dee9 0%, #b3bac1 100%);
}

.off-bottom-button {
    width: 216rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: #ffa14f;
}

.save-bottom-button {
    width: 216rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: var(--primary-color-btn);
}
