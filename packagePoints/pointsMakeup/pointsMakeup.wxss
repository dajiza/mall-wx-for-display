/* packageAgent/makeUp/makeUp.wxss */
page {
    overflow: hidde;
    height: 100%;
}

.nav-title {
    color: #333333 !important;
    font-weight: 500 !important;
    font-size: 38rpx !important;
}

.container {
    padding-bottom: 0;
    /* height: 100%; */
    background: var(--background-color);
}

.nav {
    --nav-bar-background-color: var(--background-color);
}

.filter-box-wrap {
    position: fixed;
    z-index: 11;
    width: 100%;
    height: 140rpx;
    background: var(--background-color);
}

.filter-box {
    display: flex;
    box-sizing: border-box;
    margin: 30rpx 30rpx 30rpx 30rpx;
    width: 690rpx;
    height: 80rpx;
    border-radius: 20rpx;
    background: #ffffff;
}

.filter-label-box {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
}

.filter-label {
    margin-right: 2rpx;
    color: var(--primary-color-text);
    font-size: 16px;
    line-height: 22px;
}

.filter-activate-label {
    font-weight: 500;
}

.filter-unactivate-label {
    font-weight: 400;
}

.goods-list-wrap {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding: 0 30rpx 120rpx 0;
    width: 100%;
}

.goods-item-box {
    position: relative;
    margin-bottom: 30rpx;
    margin-left: 30rpx;
    width: 330rpx;
    height: 440rpx;
    border-radius: 20rpx;
    background: #ffffff;
}

.item-image-box {
    height: 248rpx;
}

.item-image {
    width: 100%;
    height: 100%;
    border-radius: 20rpx 20rpx 0rpx 0rpx;
}

.item-goods-name {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    margin-top: 16rpx;
    padding: 0 12rpx;
    color: var(--primary-color-text);
    text-overflow: ellipsis;
    word-break: break-all;
    font-weight: 400;
    font-size: 30rpx;
    line-height: 42rpx;

    -webkit-line-clamp: 2;
}

.item-goods-bottom-box {
    position: absolute;
    right: 0;
    bottom: 12rpx;
    left: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding-right: 16rpx;
    padding-left: 16rpx;
}

.item-goods-price {
    color: var(--features-color-text);
    white-space: nowrap;
    font-weight: 500;
    font-size: 36rpx;
    line-height: 50rpx;
}
.sales {
    color: var(--tip-color-text);
    font-size: 24rpx;
}
.item-goods-add {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    background: linear-gradient(225deg, #ffa170 0%, #ff500c 100%);
    color: #fff;
}

.item-goods-add:before {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    width: 24rpx;
    height: 3rpx;
    background-color: currentColor;
    content: '';
}

.item-goods-add:after {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;
    width: 3rpx;
    height: 24rpx;
    background-color: currentColor;
    content: '';
}

.makeup-submit {
    position: fixed;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 30rpx;
    width: 100%;
    height: 120rpx;
    background: #ffffff;
    box-shadow: 0px 0px 0px 0px rgba(0, 0, 0, 0.08);
}

.makeup-total-price {
    color: var(--primary-color-text);
    font-weight: 500;
    font-size: 28rpx;
    line-height: 40rpx;
}

.makeup-tip-box {
    display: flex;
}

.makeup-tip {
    color: var(--tip-color-text);
    font-weight: 400;
    font-size: 28rpx;
    line-height: 34rpx;
}
.makeup-tip .red {
    color: var(--features-color-text);
}
.makeup-tip.small-size {
    font-size: 24rpx;
}
.botton-hover {
    opacity: 0.8;
}

/*空列表*/
.empty-list {
    display: flex;
    align-items: center;
    flex-direction: column;
    padding-top: 160rpx;
    width: 100%;
}

.empty-img {
    display: inline-block;
    padding-left: 36rpx;
    width: 202rpx;
    height: 224rpx;
    vertical-align: bottom;
}

.empty-text {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    margin-top: 40rpx;
    color: var(--primary-color);
    text-align: center;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 30rpx;
}

.no-more {
    box-sizing: border-box;
    padding: 0 0 24rpx 10rpx;
    width: 100%;
    color: var(--secondary-color-text);
    text-align: center;
    font-size: 22rpx;
}

.bottom-loading {
    margin-bottom: 20rpx;
    width: 100vw;
}

.sort-arrow {
    display: flex;
    align-items: center;
    flex-direction: column;
    margin-left: 10rpx;
}

.sort-arrow .iconfont {
    color: var(--primary-color-text);
    font-size: 12rpx;
}

.sort-is-selected {
    position: absolute;
    top: 40rpx;
    left: 14rpx;
    width: 30rpx;
    height: 16rpx;
}
