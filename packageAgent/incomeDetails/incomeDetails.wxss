.page {
    background: var(--background-color);
}

.container {
    background: var(--background-color);
}

.nav {
    background: #fff;
}

.title {
    color: #333333 !important;
    font-weight: 500 !important;
    font-size: 38rpx !important;
}

.leftIcon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 72rpx;
    color: #333333;
    transform: translateX(-25%);
}

.leftIcon .iconfont {
    font-size: 36rpx;
}

.content-box {
    padding-bottom: 40rpx;
    width: 100%;
}
.buy-sell-order {
    /*background: rgba(0, 0, 0, 0.06);*/
    /*border-radius: 10px;*/
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 88rpx;
}
.buy-sell-box {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 710rpx;
    height: 76rpx;
    border-radius: 20rpx;
    background: rgba(0, 0, 0, 0.06);
}
.buy-sell-init-box {
    position: relative;
    width: 698rpx;
    height: 64rpx;
}
.buy-sell-init-content {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 2;
    display: flex;
    align-items: center;
    width: 698rpx;
    height: 64rpx;
}
.buy-sell-init {
    width: 348rpx;
    height: 64rpx;
    color: var(--primary-color-text);
    text-align: center;
    font-weight: 500;
    line-height: 64rpx;
}
.view-order-init {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
    width: 348rpx;
    height: 64rpx;
    border-radius: 18rpx;
    background: #ffffff;
    box-shadow: 0 4rpx 8rpx 0 rgba(0, 0, 0, 0.15);
    color: var(--primary-color-text);
    text-align: center;
    font-weight: 500;
    transition: all linear 200ms;
}
.view-sell-order {
    left: 350rpx;
}
/*订单状态tabs栏*/
.order-tabs {
    position: fixed;
    left: 0;
    z-index: 21;
    width: 100%;
    height: 116rpx;
    border-radius: 0 0 30rpx 30rpx !important;
    background: #fff;
}
.h204 {
    height: 204rpx;
}
.van-tabs--line .van-tabs__wrap,
.van-tabs__nav {
    height: 94rpx !important;
}

.van-tabs__line {
    width: 48rpx !important;
    height: 8rpx !important;
    border-radius: 0 !important;
    background: var(--primary-gradual-color);
}

.van-tab {
    color: var(--primary-color-text) !important;
    font-size: 28rpx !important;
    line-height: 116rpx !important;
}

.van-tab--active {
    font-weight: 600 !important;
}

.van-tabs--line .van-tabs__wrap {
    padding-bottom: 22rpx !important;
    border-radius: 0 0 30rpx 30rpx !important;
}

.van-tabs__scroll--line {
    height: calc(100% + 22rpx) !important;
}

/*订单列表*/
.order-list {
    padding-top: 116rpx;
    padding-bottom: env(safe-area-inset-bottom);
}
.paddingTop204 {
    padding-top: 204rpx;
}
.share-shop {
    margin: 160rpx auto 0;
    width: 440rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: var(--primary-gradual-color);
    box-shadow: 0 6rpx 12rpx 0 var(--secondary-background);
    color: #ffffff;
    text-align: center;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 88rpx;
}
.button-hover {
    opacity: 0.8;
}
/*单个订单*/
.order-item {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    margin-top: 24rpx;
    padding: 24rpx 30rpx 30rpx;
    width: 100%;
    border-radius: 30rpx;
    background: #ffffff;
}

.order-status-time {
    display: flex;
    justify-content: space-between;
    margin-bottom: 32rpx;
    width: 100%;
    height: 40rpx;
    font-size: 28rpx;
    line-height: 40rpx;
}

.order-status {
    font-weight: 500;
}
.order-status-color-1 {
    color: var(--features-color-text);
}
.order-status-color-2 {
    color: var(--secondary-color-blue);
}
.order-status-color-3 {
    color: var(--tip-color-text-a2);
}

.payment-date {
    font-weight: 400;
}

.amount-box {
    display: flex;
    justify-content: flex-end;
    width: 100%;
    text-align: right;
}
.amount-box .income-amount {
    padding: 0 12rpx;
    height: 44rpx;
    border-radius: 22rpx;
    font-weight: 400;
    font-size: 24rpx;
    line-height: 44rpx;
}
.amount-box .income-status-1 {
    background: var(--secondary-background);
    color: var(--features-color-text);
}
.amount-box .income-status-2 {
    background: rgba(96, 151, 251, 0.12);
    color: var(--secondary-color-blue);
}
/*失效*/
.amount-box .income-status-3 {
    background: rgba(0, 0, 0, 0.06);
    color: var(--tip-color-text-a2);
}
.amount-box .income-status-9 {
    background: rgba(0, 0, 0, 0.06);
    color: var(--tip-color-text-a2);
}
.tip-text {
    color: var(--primary-color-text);
    font-size: 30rpx;
}

.amount-symbol {
    margin-left: 10rpx;
    color: var(--primary-color-text);
    font-size: 24rpx;
}

.amount {
    margin-left: 10rpx;
    color: var(--primary-color-text);
    font-size: 36rpx;
}

.income-goods-item {
    /*margin-bottom: 16rpx;*/
}
/*取消订单或者去支付*/
.btn-box {
    margin-top: 40rpx;
    text-align: right;
}

.order-btn {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    margin-left: 20rpx;
    width: 160rpx !important;
    font-weight: 400;
    font-size: 28rpx !important;
}

.order-btn .van-button--normal {
    padding: 0 !important;
}

.order-btn .van-button--round.van-button--normal {
    height: 64rpx !important;
}

.btn-cancel-order {
    color: var(--secondary-color-text) !important;
}

.btn-go-pay {
    border: 2rpx solid var(--primary-color) !important;
    color: var(--primary-color) !important;
}

/*空列表*/
.empty-list {
    display: flex;
    align-items: center;
    flex-direction: column;
    padding-top: 160rpx;
    width: 100%;
}
.empty-img {
    display: inline-block;
    width: 258rpx;
    height: 176rpx;
    vertical-align: bottom;
}
.empty-text {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    margin-top: 40rpx;
    color: var(--primary-color);
    text-align: center;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 30rpx;
}

/*dialog弹出框*/
.van-dialog {
}

.van-button--large {
    width: 100% !important;
}

.dialog-content {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 0 30rpx;
    height: 218rpx;
    text-align: center;
}

.dialog-content-text {
    width: 100%;
    color: var(--primary-color-text);
    text-align: center;
    font-weight: 500;
    font-size: 32rpx;
    line-height: 44rpx;
}

.dialog-button-box {
    display: flex;
    width: 100%;
    height: 85rpx;
    border-top: 1rpx solid var(--tip-color-text-d8);
}

.btn-cancel,
.btn-sure {
    box-sizing: border-box;
    width: 50%;
    height: 100%;
    border: none;
    color: var(--primary-color-text);
    text-align: center;
    font-weight: 400;
    font-size: 32rpx;
    line-height: 85rpx;
}

.btn-cancel:active,
.btn-sure:active {
    background: rgba(0, 0, 0, 0.15);
}

.border-right {
    border-right: 1rpx solid var(--tip-color-text-d8);
}

.width-100 {
    width: 100%;
}

/*加载更多*/
.order-list .van-loading {
    padding: 20rpx 0 10rpx;
    width: 100%;
}
.no-more {
    padding: 50rpx 0 10rpx;
    width: 100%;
    color: var(--secondary-color-text);
    text-align: center;
    font-size: 22rpx;
}

.tabs-box {
    position: relative;
    width: 100%;
    height: 116rpx;
}
.tabs-item {
    display: inline-block;
    width: 134rpx;
    height: 100%;
    /*padding: 38rpx 26rpx 0 24rpx;*/
    text-align: center;
    line-height: 116rpx;
}
.first-item,
.last-item {
    padding: 0 26rpx 0 24rpx;
    width: 56rpx;
}
.last-item {
    padding: 0 24rpx 0 26rpx;
    width: 56rpx;
}

.tabs-item-text {
    height: 100%;
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 28rpx;
    line-height: 116rpx;
}

.tabs-item-selected {
    font-weight: 600;
}

.tabs-line {
    position: absolute;
    top: 86rpx;
    left: 30rpx;
    width: 48rpx !important;
    height: 8rpx !important;
    border-radius: 48rpx !important;
    background: linear-gradient(270deg, #ffbcbc 0%, #ffb6cc 56%, var(--primary-color) 80%, #fb749f 100%);
    transition: all 0.3s ease-in-out;
}
.selected-0 {
    left: 30rpx;
}
.selected-1 {
    left: 150rpx;
}
.selected-2 {
    left: 284rpx;
}
.selected-3 {
    left: 418rpx;
}
.selected-4 {
    left: 552rpx;
}
.selected-5 {
    left: 672rpx;
}
.tabsShow {
    opacity: 1;
}
.tabsHide {
    opacity: 0;
}
