/* pages/goodsManagerDetail/goodsManagerDetail.wxss */
.container-box {
    background: var(--background-color);
}

.nav {
    background: transparent !important;
}

.nav-title {
    color: #fff !important;
    font-weight: 500;
    font-size: 38rpx !important;
}

.leftIcon .iconfont {
    color: #fff;
    font-size: 36rpx;
}

.swiper-wrap {
    position: relative;
    width: 100%;
    height: 560rpx;
}

.swiper {
    width: 100%;
    height: 560rpx;
}

.dots {
    position: absolute;
    right: 0;
    bottom: 40rpx;
    left: 0;
    display: flex;
    justify-content: center;
}

.dots .dot {
    margin: 0 5rpx;
    width: 24rpx;
    height: 8rpx;
    border-radius: 2rpx;
    background: rgba(0, 0, 0, 0.3);
    transition: all 0.6s;
}

.dots .dot.active {
    background: #fff;
}

.goods-label-wrap {
    display: flex;
    overflow: hidden;
    align-items: center;
    box-sizing: border-box;
    padding: 30rpx 30rpx;
    min-height: 108rpx;
    max-height: 152rpx;
    width: 100%;
    border-radius: 0px 0px 30rpx 30rpx;
    background: #ffffff;
}

.goods-label-wrap .goods-label {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    min-height: 44rpx;
    max-height: 88rpx;
    color: #333333;
    text-overflow: ellipsis;
    word-break: break-all;
    font-weight: 500;
    font-size: 32rpx;
    line-height: 44rpx;

    -webkit-line-clamp: 2;
}

.shelves-bottom-box {
    position: fixed;
    bottom: 0;
    z-index: 10;
    display: flex;
    flex-direction: column;
    width: 100%;
    height: 212rpx;
    border-radius: 30rpx 30rpx 0px 0px;
    background: #ffffff;
    box-shadow: 0px -6rpx 12rpx 0px rgba(0, 0, 0, 0.05);
}

.shelves-bottom-tip {
    box-sizing: border-box;
    margin-top: 30rpx;
    height: 34rpx;
    color: var(--tip-color-text);
    text-align: center;
    font-weight: 400;
    font-size: 24rpx;
    line-height: 34rpx;
}

.shelves-bottom-button-box {
    display: flex;
    justify-content: space-between;
    padding: 40rpx 40rpx;
    font-weight: 400 !important;
    font-size: 28rpx !important;
    line-height: 40rpx !important;
}

.shelves-btn-reset {
    width: 320rpx !important;
    height: 88rpx !important;
}

.shelves-btn-confirm {
    width: 320rpx !important;
    height: 88rpx !important;
    color: #ffffff !important;
}

.shelves-btn-reset.van-button--round.van-button--normal {
    height: 88rpx !important;
}

.shelves-btn-confirm.van-button--round.van-button--normal {
    height: 88rpx !important;
}

.content-box {
    margin-top: 24rpx;
}

.agent-goods-title-box {
    position: relative;
    height: 62rpx;
}

.agent-goods-title {
    position: absolute;
    top: -10rpx;
    height: 44rpx;
    color: #333333;
    font-weight: 500;
    font-size: 32rpx;
    line-height: 44rpx;
}

.goods-btn-box {
    display: flex;
    justify-content: space-between;
}
.operation-btn {
    width: 160rpx !important;
    height: 72rpx !important;
    border: 2rpx solid var(--tip-color-text) !important;
    border-radius: 40rpx !important;
}
