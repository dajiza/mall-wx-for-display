.wxParse {
    margin: 0 5px;
    color: #666;
    font-size: 28rpx;
    font-family: Helvetica, sans-serif;
    line-height: 1.8;
}
view {
    overflow: hidden;
    word-break: break-all;
}
.wxParse-inline {
    display: inline;
    margin: 0;
    padding: 0;
}
/*//标题 */
.wxParse-div {
    margin: 0;
    padding: 0;
}
.wxParse-h1 {
    margin: 0.67em 0;
    font-size: 2em;
}
.wxParse-h2 {
    margin: 0.75em 0;
    font-size: 1.5em;
}
.wxParse-h3 {
    margin: 0.83em 0;
    font-size: 1.17em;
}
.wxParse-h4 {
    margin: 1.12em 0;
}
.wxParse-h5 {
    margin: 1.5em 0;
    font-size: 0.83em;
}
.wxParse-h6 {
    margin: 1.67em 0;
    font-size: 0.75em;
}

.wxParse-h1 {
    margin-bottom: 0.9em;
    font-weight: 400;
    font-size: 18px;
}
.wxParse-h2 {
    margin-bottom: 0.34em;
    font-weight: 400;
    font-size: 16px;
}
.wxParse-h3 {
    margin-bottom: 0.34em;
    font-weight: 400;
    font-size: 15px;
}
.wxParse-h4 {
    margin-bottom: 0.24em;
    font-weight: 400;
    font-size: 14px;
}
.wxParse-h5 {
    margin-bottom: 0.14em;
    font-weight: 400;
    font-size: 13px;
}
.wxParse-h6 {
    margin-bottom: 0.04em;
    font-weight: 400;
    font-size: 12px;
}

.wxParse-h1,
.wxParse-h2,
.wxParse-h3,
.wxParse-h4,
.wxParse-h5,
.wxParse-h6,
.wxParse-b,
.wxParse-strong {
    font-weight: bolder;
}

.wxParse-i,
.wxParse-cite,
.wxParse-em,
.wxParse-var,
.wxParse-address {
    font-style: italic;
}
.wxParse-pre,
.wxParse-tt,
.wxParse-code,
.wxParse-kbd,
.wxParse-samp {
    font-family: monospace;
}
.wxParse-pre {
    white-space: pre;
}
.wxParse-big {
    font-size: 1.17em;
}
.wxParse-small,
.wxParse-sub,
.wxParse-sup {
    font-size: 0.83em;
}
.wxParse-sub {
    vertical-align: sub;
}
.wxParse-sup {
    vertical-align: super;
}
.wxParse-s,
.wxParse-strike,
.wxParse-del {
    text-decoration: line-through;
}
/*wxparse-自定义个性化的css样式*/
/*增加video的css样式*/
.wxParse-strong,
.wxParse-s {
    display: inline;
}
.wxParse-a {
    overflow: auto;
    color: deepskyblue;
    word-break: break-all;
}

.wxParse-video {
    margin: 10px 0;
    text-align: center;
}

.wxParse-video-video {
    width: 100%;
}

.wxParse-img {
    /*background-color: #efefef;*/
    overflow: hidden;
}

.wxParse-blockquote {
    margin: 0;
    padding: 10px 0 10px 5px;
    border-left: 3px solid #dbdbdb;
    background: var(--divider-border-color);
    font-family: Courier, Calibri, '宋体';
}

.wxParse-code,
.wxParse-wxxxcode-style {
    display: inline;
    background: var(--divider-border-color);
}
.wxParse-ul {
    margin: 20rpx 10rpx;
}

.wxParse-li,
.wxParse-li-inner {
    display: flex;
    align-items: baseline;
    margin: 10rpx 0;
}
.wxParse-li-text {
    align-items: center;
    line-height: 20px;
}

.wxParse-li-circle {
    display: inline-flex;
    margin-right: 5px;
    width: 5px;
    height: 5px;
    background-color: #333;
}

.wxParse-li-square {
    display: inline-flex;
    margin-right: 5px;
    width: 10rpx;
    height: 10rpx;
    background-color: #333;
}
.wxParse-li-ring {
    display: inline-flex;
    margin-right: 5px;
    width: 10rpx;
    height: 10rpx;
    border: 2rpx solid #333;
    border-radius: 50%;
    background-color: #fff;
}

