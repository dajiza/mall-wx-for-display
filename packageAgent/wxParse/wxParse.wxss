.wxParse-u {
    text-decoration: underline;
}
.wxParse-hide {
    display: none;
}
.WxEmojiView {
    align-items: center;
}
.wxEmoji {
    width: 16px;
    height: 16px;
}
.wxParse-tr {
    display: flex;
    border-top: 1px solid #e0e0e0;
    border-right: 1px solid #e0e0e0;
    border-bottom: 1px solid #e0e0e0;
}
.wxParse-th,
.wxParse-td {
    flex: 1;
    padding: 5px;
    border-left: 1px solid #e0e0e0;
    word-break: break-all;
    font-size: 28rpx;
}
.wxParse-td:last {
    border-top: 1px solid #e0e0e0;
}
.wxParse-th {
    border-top: 1px solid #e0e0e0;
    background: #f0f0f0;
}
.wxParse-del {
    display: inline;
}
.wxParse-figure {
    overflow: hidden;
}
