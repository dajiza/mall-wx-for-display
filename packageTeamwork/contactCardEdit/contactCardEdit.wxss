.page {
    background: var(--background-color);
}

.container {
    padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
    background: var(--background-color);
}

.nav {
    background: #fff;
}

.title {
    color: #333333 !important;
    font-weight: 500 !important;
    font-size: 38rpx !important;
}

.leftIcon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 72rpx;
    color: #333333;
    transform: translateX(-25%);
}

.leftIcon .iconfont {
    font-size: 36rpx;
}

.user-info-box {
    margin-top: 30rpx;
    width: 100%;
    background: #fff;
}

.contact-way-box {
    margin-top: 30rpx;
    margin-bottom: 150rpx;
    width: 100%;
    background: #fff;
}

.cell-dividing {
    margin: 0 auto;
    width: calc(100% - 60rpx);
    height: 1px;
    background: var(--divider-background-color);
}

.cell-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 30rpx;
    height: 130rpx;
}

.cell-box-label-box {
    display: flex;
    align-items: center;
}

.cell-box-label-req {
    color: #e70000;
    font-weight: 400;
    font-size: 30rpx;
    line-height: 42rpx;
}

.cell-box-label {
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 15px;
    line-height: 21px;
}

.cell-box-content-box {
    display: flex;
    align-items: center;
}

.cell-box-content-box .timg {
    margin-right: 30rpx;
    width: 90rpx;
    height: 90rpx;
}

.cell-box-content-box .timg .fullimg {
    width: 100%;
    height: 100%;
    border-radius: 46rpx;
}

.cell-box-content-box .input {
    /* direction: rtl; */
    color: var(--primary-color-text);
    text-align: right;
    font-weight: 400;
    font-size: 30rpx;
    line-height: 42rpx;
}

.qrcode-image {
    width: 66rpx;
    height: 66rpx;
}

.input-placeholder {
    color: var(--tip-color-text);
    font-weight: 400;
    font-size: 30rpx;
    line-height: 42rpx;
}

.bottom-button-container {
    position: fixed;
    bottom: 0;
    z-index: 100;
    display: flex;
    flex-direction: column;
    width: 100%;
    background: var(--divider-border-color);
}

.botton-hover {
    opacity: 0.8;
}

.bottom-button {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    width: 690rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: var(--primary-color-btn);
    color: #ffffff;
    line-height: 88rpx;
}

.bottom-button-container-label {
    height: 40rpx;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
}

.mode-wrap {
    display: flex;
}
.mode-wrap .mode {
    box-sizing: border-box;
    margin-left: 40rpx;
    padding: 0 16rpx;
    min-width: 84rpx;
    height: 48rpx;
    border-radius: 8rpx;
    background-color: rgba(var(--primary-color-text-opacity), 0.08);
    text-align: center;
    font-size: 26rpx;
    line-height: 48rpx;
}
.mode-wrap .mode.active {
    display: block;
    background-color: rgba(var(--primary-color-opacity), 0.08);
    color: var(--primary-color);
}

.new-form-item.poster {
    justify-content: flex-start;
    height: 200rpx;
}
.new-form-item.poster .timg {
    width: 120rpx;
    height: 120rpx;
    border-radius: 16rpx;
}
.new-form-item.poster .name {
    margin-left: 30rpx;
}
.new-form-item.poster .icon-right-corner2 {
    margin-left: auto;
}
