.page {
    position: relative;
    background: var(--background-color);
}

.container {
    background: var(--background-color);
}

.nav {
    background: #fff;
}

.title {
    color: #333333 !important;
    font-weight: 500 !important;
    font-size: 38rpx !important;
}

.leftIcon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 72rpx;
    color: #333333;
    transform: translateX(-25%);
}

.leftIcon .iconfont {
    font-size: 36rpx;
}

.content-box {
    margin-top: 30rpx;
    margin-bottom: 148rpx;
    width: 100%;
    background: #fff;
}

.course-content-wrap {
    box-sizing: border-box;
    padding: 44rpx 20rpx 44rpx 30rpx;
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 30rpx;
    line-height: 42rpx;
}

.courseware-box {
    display: flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
}

.content-box .divider {
    margin: 0 auto;
    width: 690rpx;
    height: 2rpx;
    background: var(--divider-background-color);
}

.plus-wrap {
    position: relative;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    margin-top: 30rpx;
    margin-left: 30rpx;
    width: 690rpx;
    height: 220rpx;
    border-radius: 20rpx;
    /*padding-top: 100%;*/
    background: #ffffff;
}

.courseware-add {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-left: 30rpx;
    width: 160rpx;
    height: 160rpx;
    border-radius: 4rpx;
    background: rgba(0, 0, 0, 0.04);
}

.bottom-button-container {
    position: fixed;
    bottom: 0;
    z-index: 100;
    display: flex;
    flex-direction: column;
    width: 100%;
    background: var(--divider-border-color);
}

.botton-hover {
    opacity: 0.8;
}

.bottom-button {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto;
    width: 690rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: var(--primary-color-btn);
    color: #ffffff;
    line-height: 88rpx;
}

.bottom-button-container-label {
    height: 40rpx;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
}

.video-preview-box {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 300;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    background: #000;
}

.video-preview {
    z-index: 300;
    width: 100%;
    height: 422rpx;
}

.video-preview-close {
    position: absolute;
    top: 0;
    z-index: 300;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding-right: 30rpx;
    padding-left: 30rpx;
    color: #fff;
}

.tip-text {
    margin-top: 24rpx;
    color: var(--tip-color-text);
    font-weight: 400;
    font-size: 26rpx;
    line-height: 36rpx;
}

.nav-tabs {
    position: sticky;
    left: 0;
    z-index: 100;
    width: 100%;
    height: 100rpx;
    background: #fff;
}

.van-tabs--line .van-tabs__wrap,
.van-tabs__nav {
    height: 100rpx !important;
}

.van-tabs__line {
    bottom: 14rpx !important;
    width: 52rpx !important;
    height: 8rpx !important;
    border-radius: 0 !important;
    background: var(--primary-gradual-color);
}

.van-tab {
    padding-bottom: 0 !important;
    color: var(--primary-color-text) !important;
    font-size: 28rpx !important;
    line-height: 100rpx !important;
}

.van-tab--active {
    font-weight: 600 !important;
}

.van-tabs--line .van-tabs__wrap {
    /*padding-bottom: 22rpx !important;*/
    border-radius: 0 !important;
}

.touchView {
    position: absolute;
    top: 0;
    left: 30rpx;
    z-index: 200;
    width: 80rpx;
}

.edit_col1 {
    float: left;
    width: 12%;
    text-align: center;
}

.edit_col2 {
    float: left;
    width: 40%;
}

.edit_col3 {
    float: left;
    width: 24%;
    text-align: center;
}

.edit_col4 {
    position: relative;
    float: left;
    width: 23%;
    text-align: center;
}

.edit_del {
    float: left;
    padding-right: 10px;
    color: #fd7736;
}

.edit_finish {
    float: right;
    padding-right: 10px;
    width: 24%;
    height: 40px;
    color: #fd7736;
}

.edit_row_title .edit_col4:before {
    position: absolute;
    top: 50%;
    left: 0%;
    margin-top: -9px;
    width: 1px;
    height: 18px;
    background-color: #e8e8e8;
    content: '';
}

.edit_title_col1 {
    position: relative;
    left: 10px;
}

.stay_top {
    height: 47px;
    line-height: 47px;
}

.stay_top .edit_row {
    position: fixed;
    top: 0;
    left: 0;
    z-index: 99;
    padding: 0;
    width: 100%;
    height: 47px;
    color: rgba(89, 89, 89, 0.8);
    font-size: 14px;
}

.edit_row_holder {
}

.edit_row_on .ico_checker {
    background-position: 0 -17px;
}

.moveable_row {
    position: absolute;
    top: 0;
    left: 0;
    z-index: 101;
    width: 100%;
}

.moveable_row .edit_row {
    border-radius: 20rpx;
    box-shadow: 0 0 12px rgba(0, 0, 0, 0.2);
}

.stay_bottom .all_select .ico_checker {
    background-position: 0 -17px;
}

.edit_row {
    /*overflow: hidden;*/
    box-sizing: border-box;
    margin: 30rpx auto 0;
    /*padding-top: 30rpx;*/
    width: 690rpx;
    height: 220rpx;
    background: transparent;
    font-size: 12px;
}
.drag-wrap {
    box-sizing: border-box;
    width: 100%;
}
.dragSelected {
    background: #ccc !important;
}
.media-item {
    position: relative;
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 30rpx;
    width: 100%;
    height: 220rpx;
    border-radius: 20rpx;
    background: #ffffff;
}

.img-box {
    position: relative;
    margin-left: auto;
    width: 160rpx;
    height: 160rpx;
    border-radius: 4rpx;
}
.img-box .image {
    display: block;
    width: 160rpx;
    height: 160rpx;
    border-radius: 4rpx;
    vertical-align: bottom;
}
.img-box .video {
    position: absolute;
    z-index: 9;
    width: 160rpx;
    height: 160rpx;
    border-radius: 4rpx;
}

.media-title {
    margin-left: 20rpx;
    width: 400rpx;
}

.title-input {
    box-sizing: border-box;
    padding: 0 20rpx;
    width: 400rpx;
    height: 80rpx;
    border-radius: 6rpx;
    background: var(--background-color);
}

.title-input-placeholder {
    color: var(--tip-color-text);
    font-weight: 400;
    font-size: 26rpx;
    line-height: 36rpx;
}

.delete-box {
    position: absolute;
    top: -28rpx;
    right: -28rpx;
    z-index: 100;
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    padding: 16rpx 16rpx 28rpx 40rpx;
    width: 92rpx;
    height: 80rpx;
}

.delete-box .delete-image {
    display: block;
    width: 36rpx;
    height: 36rpx;
    vertical-align: bottom;
}
.icon-sort-wrap {
    width: 32rpx;
    height: 32rpx;
    /*margin-left: auto;*/
}
.icon-sort-wrap .sort-image {
    display: block;
    width: 32rpx;
    height: 32rpx;
    vertical-align: bottom;
}

.placeholder-bottom {
    width: 100%;
}
