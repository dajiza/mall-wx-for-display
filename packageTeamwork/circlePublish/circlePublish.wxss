.page {
    background: #fff;
}

.container {
    background: #fff;
}

.nav {
    background: #fff;
    color: #fff;
}

.title {
    font-weight: 500 !important;
    font-size: 38rpx !important;
}

.leftIcon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 72rpx;
    color: #000;
    transform: translateX(-25%);
}

.leftIcon .iconfont {
    font-size: 36rpx;
}

.circle-publish-page .content-box {
    box-sizing: border-box;
    padding: 40rpx 60rpx calc(124rpx + env(safe-area-inset-bottom));
    width: 100%;
}
.circle-publish-page .content-box .text-wrap {
    min-height: 144rpx;
}

.circle-publish-page .btn-publish {
    position: fixed;
    bottom: calc(40rpx + env(safe-area-inset-bottom));
    left: 30rpx;
    width: 690rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: var(--disabled-color-btn);
    color: #fff;
    text-align: center;
    line-height: 88rpx;
}
.circle-publish-page {
    padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}
.circle-publish-page .btn-can-use {
    background: var(--primary-color-btn);
}
.circle-publish-page .van-field,
.circle-publish-page .van-cell {
    padding: 0 !important;
}
.circle-publish-textarea {
    min-height: 144rpx !important;
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 32rpx;
    line-height: 48rpx;
}

.publish-type-wrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 84rpx;
    width: 100%;
    height: 130rpx;
    border-top: 1rpx solid var(--divider-background-color);
    border-bottom: 1rpx solid var(--divider-background-color);
    background: #ffffff;
}
.publish-type-wrap .label-text {
    height: 48rpx;
    color: #564b4e;
    font-weight: 400;
    font-size: 30rpx;
    line-height: 48rpx;
}
.publish-type-wrap .type-all-wrap {
    display: flex;
    height: 48rpx;
}
.publish-type-wrap .type-item {
    margin-left: 40rpx;
    padding: 0 16rpx;
    height: 48rpx;
    border-radius: 8rpx;
    background: rgba(var(--primary-color-text-opacity), 0.08);
    color: var(--primary-color-text);
    font-size: 26rpx;
    line-height: 48rpx;
}
.publish-type-wrap .selected-item {
    background: rgba(var(--primary-color-opacity), 0.12);
    color: var(--primary-color);
}

.img-wrap {
    overflow: hidden;
    margin-top: 100rpx;
    max-height: 642rpx;
}
.plus-wrap {
    position: relative;
    box-sizing: border-box;
    padding-top: 100%;
    background: #ffffff;
}
.video-plus-wrap {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 100rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 4rpx;
    background: rgba(0, 0, 0, 0.04);
}

.plus-wrap .plus-item {
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
    box-sizing: border-box;
    margin-top: 12rpx;
    width: calc(100% - 12rpx);
    height: calc(100% - 12rpx);
}

.courseware-add {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    border-radius: 4rpx;
    background: rgba(0, 0, 0, 0.04);
    /*margin-top: 12rpx;*/
}
.courseware-add .ic-add,
.video-plus-wrap .ic-add {
    display: inline-block;
    margin-bottom: 12rpx;
    width: 46rpx;
    height: 48rpx;
}
.video-wrap {
    position: relative;
    margin-top: 100rpx;
    width: 400rpx;
    height: 400rpx;
    background-color: #000;
}
.del-video {
    position: absolute;
    top: -40rpx;
    right: -40rpx;
    z-index: 10;
    padding: 20rpx;
}
.del-video .delete-video-icon {
    width: 48rpx;
    height: 48rpx;
}
.video {
    position: absolute;
    z-index: 9;
    width: 400rpx;
    height: 400rpx;
}
.van-field__input--textarea {
}
.tip-text {
    margin-top: 24rpx;
    color: var(--tip-color-text);
    font-weight: 400;
    font-size: 26rpx;
    line-height: 36rpx;
}
