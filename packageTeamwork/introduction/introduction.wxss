/* pages/orderCheck/orderCheck.wxss */
.container {
    padding-bottom: calc(140rpx + env(safe-area-inset-bottom));
    background-color: #fff;
}
.wrap {
    width: 100%;
    border-radius: 30rpx;
    background-color: #fff;
}
.nav {
    background: #fff !important;
}
.nav-title {
    color: #333 !important;
    font-weight: 500;
    font-size: 38rpx !important;
}
.leftIcon .iconfont {
    font-size: 36rpx;
}
.van-nav {
    width: 100%;
    background: #fff !important;
}

/* 编辑器 */

.editor_toolbox {
    position: fixed;
    bottom: 0;
    z-index: 999;
    display: flex;
    box-sizing: border-box;
    padding: 5px;
    width: 100%;
    background-color: #ededed;
    line-height: 1.6;
}

.iconfont {
    flex: 1;
    text-align: center;
    font-style: normal;
    font-size: 22px;
    font-family: 'iconfont' !important;

    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

.icon-undo:before {
    content: '\e607';
}

.icon-redo:before {
    content: '\e606';
}

.icon-img:before {
    content: '\e6e2';
}

.icon-video:before {
    content: '\e798';
}

.icon-link:before {
    content: '\e60d';
}

.icon-text:before {
    content: '\e6ce';
}

.icon-clear:before {
    content: '\e637';
}

.icon-save:before {
    content: '\e501';
}

/* 模态框 */
.modal {
    position: fixed;
    top: 50%;
    right: 16px;
    left: 16px;
    border-radius: 12px;
    background-color: #fff;
    transform: translateY(-50%);
}

.modal_title {
    padding: 32px 24px 16px;
    text-align: center;
    font-weight: 700;
    font-size: 17px;
}

.modal_input {
    display: block;
    margin: 0 24px 32px 24px;
    padding: 5px;
    border: 1px solid #dfe2e5;
    font-size: 14px;
}

.modal_foot {
    display: flex;
    border-top: 1px solid rgba(0, 0, 0, 0.1);
    font-weight: 700;
    line-height: 56px;
}

.modal_button {
    flex: 1;
    text-align: center;
}

/* 蒙版 */
.mask {
    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-color: black;
    opacity: 0.5;
}
