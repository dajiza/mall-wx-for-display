.container {
    position: relative;
    width: 100vw;
    /* padding-bottom: 200rpx; */
    background-color: var(--background-color);
}
.nav {
    background: #fff !important;
}
.nav-title {
    color: #333 !important;
    font-weight: 500;
    font-size: 38rpx !important;
}
.leftIcon .iconfont {
    font-size: 36rpx;
}
.van-nav {
    width: 100%;
    background: #fff !important;
}

.way {
    margin-top: 60rpx;
    width: 100%;
}
.way .text {
    text-indent: 30rpx;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40px;
}
.way .time {
    color: var(--tip-color-text-a2);
    text-indent: 30rpx;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40px;
}
.way .item {
    display: flex;
    align-items: center;
    width: 100%;
    height: 128rpx;
    border-radius: 30rpx;
    background: #ffffff;
    line-height: 128rpx;
}
.way .item .money {
    margin: 0px 20rpx 0 40rpx;
    width: 48rpx;
    height: 48rpx;
}

.amount {
}
.amount .name {
    margin-right: 10rpx;
    margin-left: 40rpx;
}
.amount .tip {
    display: flex;
    justify-content: space-between;
    margin-top: 20rpx;
    margin-right: 40rpx;
    margin-left: 40rpx;
    color: var(--tip-color-text-a2);
    font-size: 24rpx;
}
.amount .all {
    margin-right: 40rpx;
    margin-left: auto;
    color: #ff91b3;
    font-weight: 400;
    font-size: 28rpx;
}
.big-btn {
    position: absolute !important;
    right: 0;
    bottom: 40rpx;
    left: 0;
    margin-top: 72rpx !important;
    width: 690rpx !important;
}
