.page {
    background: #fff;
}

.container {
    background: var(--divider-border-color);
}

.nav {
    background: #fff;
    color: #fff;
}

.title {
    font-weight: 500 !important;
    font-size: 38rpx !important;
}

.leftIcon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 72rpx;
    color: #000;
    transform: translateX(-25%);
}

.leftIcon .iconfont {
    font-size: 36rpx;
}

.review-publish .content-box {
    box-sizing: border-box;
    padding: 40rpx 60rpx calc(124rpx + env(safe-area-inset-bottom));
    width: 100%;
}
.review-publish .review-content .text-wrap {
    margin-left: 40rpx;
    padding-top: 24rpx;
    min-height: 180rpx;
    width: 650rpx;
}

.review-publish .btn-publish {
    position: fixed;
    bottom: calc(40rpx + env(safe-area-inset-bottom));
    left: 30rpx;
    width: 690rpx;
    height: 88rpx;
    border-radius: 44rpx;
    background: var(--disabled-color-btn);
    color: #fff;
    text-align: center;
    line-height: 88rpx;
}
.review-publish {
    padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}
.review-publish .btn-can-use {
    background: var(--primary-color-btn);
}
.review-publish .van-field,
.review-publish .van-cell {
    padding: 0 !important;
}
.review-publish-textarea {
    min-height: 200rpx !important;
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
}

.plus-wrap {
    position: relative;
    box-sizing: border-box;
    padding-top: 100%;
    background: #ffffff;
}
.video-plus-wrap {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 100rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 4rpx;
    background: rgba(0, 0, 0, 0.04);
}

.plus-wrap .plus-item {
    position: absolute;
    top: 0;
    left: 0;
    overflow: hidden;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
}

.van-field__input--textarea {
}
.tip-text {
    margin-top: 24rpx;
    color: var(--tip-color-text);
    font-weight: 400;
    font-size: 26rpx;
    line-height: 36rpx;
}
.review-publish .goods-info-wrap {
    box-sizing: border-box;
    padding: 40rpx 30rpx;
    width: 100%;
    height: 216rpx;
    border-radius: 0 0 30rpx 30rpx;
    background: #ffffff;
}
.review-publish .review-content {
    margin-top: 24rpx;
    width: 100%;
    border-radius: 30rpx;
    /*height: 292px;*/
    background: #ffffff;
    /*padding-bottom: 40rpx;*/
}
.review-publish .review-content .star-wrap {
    display: flex;
    align-items: center;
    margin-left: 40rpx;
    width: 650rpx;
    height: 112rpx;
    border-bottom: 2rpx solid var(--divider-background-color);
}
.review-publish .review-content .star-wrap .text-box {
    height: 40rpx;
    font-size: 28rpx;
    line-height: 40rpx;
}
.review-publish .review-content .star-wrap .label {
    color: var(--primary-color-text);
    font-weight: 500;
}
.review-publish .review-content .star-wrap .star-list {
    display: flex;
    margin: 0 6rpx 0 30rpx;
    width: 382rpx;
}
.star-wrap .star-list .star-item {
    margin-right: 24rpx;
    width: 52rpx;
    height: 52rpx;
}
.star-wrap .star-list .star-item .iconfont {
    color: #b2b2b2;
    font-size: 52rpx;
}
.review-publish .review-content .star-wrap .star-text {
    color: var(--tip-color-text);
    font-weight: 400;
}
.review-publish .media-wrap {
    width: 100%;
    height: 240rpx;
}
.review-publish .media-wrap .media-box {
    height: 100%;
    /*display: flex;*/
    white-space: nowrap;
}
.review-publish .media-wrap .media-plus {
    position: relative;
    display: inline-block;
    /*margin-right: 40rpx;*/
    margin-top: 40rpx;
    width: 160rpx;
    height: 160rpx;
}
.review-publish .media-wrap .media-plus-wrap {
    position: absolute;
    top: 0;
    left: 0;
    display: flex;
    align-items: center;
    flex-direction: column;
    box-sizing: border-box;
    /*justify-content: center;*/
    width: 160rpx;
    height: 160rpx;
    border: 2rpx solid var(--icon-arrow-color);
    border-radius: 12rpx;
    background: #ffffff;
    color: var(--tip-color-text);
    font-size: 20rpx;
}
.review-publish .media-wrap .icon-Shape {
    margin-top: 40rpx;
    color: var(--tip-color-text);
    font-size: 56rpx;
}
.review-publish .media-wrap .add-text {
    margin-top: 12rpx;
}
.review-publish .media-item {
    position: relative;
    display: inline-block;
    margin-top: 40rpx;
    margin-right: 40rpx;
    width: 160rpx;
    height: 160rpx;
    border-radius: 12rpx;
    background: #ffffff;
}
.review-publish .media-last {
    margin-right: 0 !important;
}
.review-publish .media-item .img {
    display: block;
    width: 100%;
    height: 100%;
    border-radius: 12rpx;
    vertical-align: bottom;
}
.review-publish .media-item .video {
    position: absolute;
    z-index: 9;
    width: 160rpx;
    height: 160rpx;
    border-radius: 12rpx;
}
.review-publish .media-item .del-box {
    position: absolute;
    top: -24rpx;
    right: -30rpx;
    z-index: 10;
    padding: 10rpx;
}
.del-box .ic-del {
    display: block;
    width: 40rpx;
    height: 40rpx;
    vertical-align: bottom;
}
.review-publish .placeholder-box {
    display: inline-block;
    width: 40rpx;
    height: 160rpx;
}
::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}
