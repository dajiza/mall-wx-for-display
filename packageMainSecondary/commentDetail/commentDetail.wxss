.page {
    background: var(--background-color);
}

.container {
    background: var(--background-color);
}

.nav {
    /* --nav-bar-background-color: #00000000; */
}

.title {
    color: #333333 !important;
    font-weight: 500 !important;
    font-size: 38rpx !important;
}

.leftIcon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 72rpx;
    color: #333333;
    transform: translateX(-25%);
}

.leftIcon .iconfont {
    font-size: 36rpx;
}

.content-box {
    width: 100%;
}

.content-header {
    padding: 40rpx 40rpx;
    border-radius: 0px 0px 30rpx 30rpx;
    background: #ffffff;
}

.content-header-radius {
    margin-top: 216rpx;
    border-radius: 30rpx;
}

.comment-goods-wrap {
    position: fixed;
    z-index: 10;
    box-sizing: border-box;
    padding: 40rpx;
    width: 100%;
    background: var(--divider-border-color);
}

.user-info-wrap {
    display: flex;
    align-items: center;
}

.user-info-second-wrap {
    display: flex;
    flex-direction: column;
    margin-left: 16rpx;
    height: 100%;
}

.user-info-name {
    color: #564b4e;
    font-weight: 500;
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    line-height: 40rpx;
}

.user-info-extra {
    display: flex;
    align-items: center;
    color: #b2b2b2;
    font-weight: 400;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    line-height: 34rpx;
}

.s-line {
    margin: 0 12rpx;
    width: 2rpx;
    height: 20rpx;
    background: var(--tip-color-text-d8);
}

.comment-content {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    margin-top: 20rpx;
    color: var(--primary-color-text);
    text-overflow: ellipsis;
    word-break: break-all;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;

    -webkit-line-clamp: 10;
}

.comment-img-wrap {
    display: flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
    width: 100%;
}

.content-body {
    margin-top: 24rpx;
    padding: 20rpx 40rpx 40rpx 40rpx;
    border-radius: 30rpx;
    background: #ffffff;
}
.reply-count {
    color: var(--primary-color-text);
    font-weight: 500;
    font-size: 28rpx;
    line-height: 40rpx;
}

.comment-list-item {
    margin-top: 40rpx;
}

.content-footer {
    position: fixed;
    bottom: 0;
    left: 0;
    z-index: 11;
    width: 100%;
    /*height: 120rpx;*/
    background: #ffffff;
    box-shadow: 0px 0px 0px 2rpx rgba(0, 0, 0, 0.08);
}
.footer-wrap {
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 40rpx;
    width: 100%;
    height: 120rpx;
}

.content-footer .input {
    display: flex;
    align-items: center;
    box-sizing: border-box;
    padding: 0 28rpx;
    width: 540rpx;
    height: 72rpx;
    border-radius: 36rpx;
    background: #efefef;
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 26rpx;
    line-height: 36rpx;
}

.content-footer .input-full {
    padding: 0 0 0 28rpx;
    width: 100%;
}

.input-placeholder {
    color: var(--tip-color-text-a2);
    font-weight: 400;
    font-size: 26rpx;
    line-height: 36rpx;
}

.comment-send-button.van-button--round.van-button--normal {
    width: 136rpx !important;
    height: 72rpx !important;
    background: var(--primary-color) !important;
}

.comment-content-goods {
    padding: 20rpx;
    border-radius: 10px;
    background: #efefef;
}
