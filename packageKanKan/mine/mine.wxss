page {
  overflow: hidde;
  box-sizing: border-box;
  height: 100vh;
  background-color: var(--background-color);
}

.container {
  position: relative;
}

.nav-custom-class {
  --nav-bar-background-color: #00000000;
}

.nav-title-wrap{
  display: flex;
  justify-content: center;
  align-items: center;
}

.nav-title-avatar{
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}

.nav-title{
  width: 300rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-line-clamp: 1;
}

.blur-box {
  width: 100%;
  height: 750rpx;
  overflow: hidden;
  position: absolute;
  top: 0;
}

.blur-mask {
  width: 100%;
  height: 750rpx;
  overflow: hidden;
  position: absolute;
  top: 0;
  z-index: 1;
}

.blur-mask .mask {
  -webkit-filter: brightness(50%);
  filter: brightness(50%);
  width: 100%;
  height: 100%;
  background: #000000;
  opacity: 0.3;
}

.blur-avatar {
  width: 100%;
  height: 100%;
  display: block;
  -webkit-filter: blur(40rpx);
  filter: blur(40rpx);
  transform: scale(1.2);
}

.personal-info-wrap {
  width: 100%;
  height: 420rpx;
  position: relative;
  padding: 0 40rpx;
  box-sizing: border-box;
  z-index: 1;
  padding-top: 56rpx;
}

.personal-info-wrap .img-wrap {
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  align-items: flex-end;
}

.personal-info-wrap .img-wrap .personal-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 48rpx;
}

.personal-info-wrap .img-wrap .tip-wrap {
  width: 76rpx;
  height: 76rpx;
  background: rgba(216, 216, 216, 0.1);
  border-radius: 24rpx;
  padding: 18rpx;
  box-sizing: border-box;
}

.personal-name {
  font-size: 32rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 44rpx;
  margin-top: 30rpx;
}

.personal-introduce {
  margin-top: 24rpx;
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 40rpx;
  display: flex;
  justify-content: space-between;
  height: 52rpx;
  align-items: center;
}

.introduce {
  font-size: 28rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 40rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-line-clamp: 2;
  /* width: 500rpx; */
  width:calc(100% - 136rpx);
  /* height: 80rpx; */
}

.introduce-edit {
  width: 96rpx;
  height: 52rpx;
  background: rgba(154, 154, 154, 0.24);
  border-radius: 26rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 26rpx;
}

.scroll-fixed {
  background: #F5F5F5;
}

.list-wrap {
  background: #F5F5F5;
  border-radius: 40rpx 40rpx 0px 0px;
  z-index: 11;
  width: 100%;
}

.list-wrap .list-header {
  height: 120rpx;
  display: flex;
  font-size: 28rpx;
  font-weight: 400;
  color: var(--primary-color-text);
  line-height: 40rpx;
  display: flex;
}

.list-wrap .list-header .share-wrap {
  display: flex;
  height: 120rpx;
  width: 100%;
  align-items: center;
  box-sizing: border-box;
  padding-left: 80rpx;
}

.list-wrap .list-header .share-wrap .share-label {
  margin-left: 12rpx;
}

.list-wrap .list-header .collect-wrap {
  display: flex;
  height: 120rpx;
  width: 100%;
  justify-content: flex-end;
  box-sizing: border-box;
  align-items: center;
  padding-right: 90rpx;
}

.list-wrap .list-header .share-wrap .share-icon {
  width: 40rpx;
  height: 40rpx;
}

.list-wrap .list-header .collect-wrap .collect-label {
  margin-left: 12rpx;
}

.list-wrap .list-header .collect-wrap .collect-icon {
  width: 40rpx;
  height: 40rpx;
}

.btn-publish-wrap {
  position: fixed;
  left: 266rpx;
  height: 88rpx;
  bottom: 100rpx;
  z-index: 11;
}

.btn-publish {
  width: 232rpx;
  width: 232rpx;
  height: 88rpx;
  background: var(--primary-color);
  border-radius: 44rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.btn-publish .publish-icon {
  width: 32rpx;
  height: 32rpx;
}

.btn-publish .btn-label {
  font-size: 28rpx;
  font-weight: 500;
  color: #FFFFFF;
  line-height: 40rpx;
  margin-left: 16rpx;
}

.empty-wrap {
  font-size: 26rpx;
  font-weight: 400;
  color: #A2A2A2;
  line-height: 36rpx;
  display: flex;
  justify-content: center;
  margin-top: 200rpx;
}

.list-content {
  width: 100%;
  height: 100%;
}

.course-item-wrap {
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 0 24rpx;
  justify-content: space-between;
  padding-bottom: env(safe-area-inset-bottom);
}

.course-item {
  width: 340rpx;
  height: 474rpx;
  background: #FFFFFF;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.poster-wrap {
  position: relative;
  height: 340rpx;
}

.poster-wrap .poster {
  width: 340rpx;
  height: 340rpx;
  border-radius: 10rpx 10rpx 0px 0px;
}

.poster-wrap .favorites-wrap {
  position: absolute;
  right: 8rpx;
  bottom: 12rpx;
  display: flex;
  height: 36rpx;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 18rpx;
  padding-left: 16rpx;
  padding-right: 12rpx;
  align-items: center;
}

.poster-wrap .favorites-wrap .favorite-num {
  font-size: 22rpx;
  font-weight: 400;
  color: #FFFFFF;
  line-height: 32rpx;
  margin-right: 8rpx;
}

.poster-wrap .favorites-wrap .favorite {
  color: var(--primary-color);
}

.poster-wrap .favorites-wrap .no-favorite {
  color: #fff;
}

.poster-wrap .audit-wrap {
    position: absolute;
    right: 8rpx;
    bottom: 12rpx;
    display: flex;
    border-radius: 18rpx;
    align-items: center;
    height: 36rpx;
    font-size: 22rpx;
    font-weight: 400;
    color: #FFFFFF;
    line-height: 32rpx;
    width: 96rpx;
    display: flex;
    height: 36rpx;
    justify-content: center;
    align-items: center;
    background: #FB6090;
}

.audit-reject{
  background: #FFA14F !important;
}

.course-item .course-title {
  font-size: 30rpx;
  font-weight: 500;
  color: var(--primary-color-text);
  line-height: 42rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-top: 16rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-line-clamp: 1;
}

.course-item .author-wrap {
  display: flex;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin-top: 16rpx;
}

.author-avatar {
  width: 36rpx;
  height: 36rpx;
  border-radius: 18rpx;
}

.author-name {
  font-size: 26rpx;
  font-weight: 400;
  color: #A2A2A2;
  line-height: 36rpx;
  margin-left: 12rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-line-clamp: 1;
  width: 256rpx;
}

.introduce-edit-dialog{
  height: 278rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.introduce-content{
  width: 520rpx;
  height: 200rpx;
  background: #EFEFEF;
  border-radius: 6rpx;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  padding: 24rpx;
  box-sizing: border-box;
}


.van-loading {
  padding: 24rpx 10rpx;
  width: 100%;
}

.no-more {
  box-sizing: border-box;
  padding: 24rpx 10rpx;
  width: 100%;
  color: var(--secondary-color-text);
  text-align: center;
  font-size: 22rpx;
}


/* pop */
.pop {
  width: 670rpx;
}
.pop .close {
  margin: 20rpx 0rpx 20rpx auto;
  width: 48rpx;
  height: 48rpx;
}
.pop .close .close-img {
  width: 48rpx;
  height: 48rpx;
}
.pop .contents {
  width: 670rpx;
  border-radius: 30rpx;
  background: #ffffff;
}
.pop .title {
  position: relative;
  width: 670rpx;
  height: 108rpx;
}
.pop .title .subject {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  padding-top: 60rpx;
  text-align: center;
  font-weight: 500;
  font-size: 36rpx;
}
.pop .title .subject .text {
  margin: 0 20rpx;
}
.pop .title .subject .title-left {
  width: 20rpx;
  height: 16rpx;
}
.pop .title .subject .title-right {
  width: 20rpx;
  height: 16rpx;
}
.pop .title-img {
  position: absolute;
  top: 0;
  width: 670rpx;
  height: 108rpx;
}
.pop .list {
  margin: 40rpx 30rpx 0;
  padding-bottom: 16rpx;
}
.pop .list .item {
  display: flex;
  padding-bottom: 44rpx;
}
.pop .list .label {
  flex: 0 0 140rpx;
  margin-right: 20rpx;
  color: var(--primary-color-text);
  font-weight: 500;
  font-size: 28rpx;
}
.pop .list .value {
  color: var(--primary-color-text);
  font-weight: 300;
  font-size: 26rpx;
}

.pop-custom {
  background: transparent !important;
}