page {
  overflow: hidde;
  box-sizing: border-box;
  height: 100vh;
  background-color: #ffffff;
}

.title {
  color: #333333 !important;
  font-weight: 500 !important;
  font-size: 38rpx !important;
}

.leftIcon {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 72rpx;
  color: #333333;
  transform: translateX(-25%);
}

.leftIcon .iconfont {
  font-size: 36rpx;
}

.bottom-button-container {
  display: flex;
  flex-direction: column;
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #ffffff;
  padding-bottom: env(safe-area-inset-bottom);
}

.botton-hover {
  opacity: 0.8;
}

.bottom-button {
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto;
  width: 690rpx;
  height: 88rpx;
  border-radius: 44rpx;
  background: var(--primary-color-btn);
  color: #ffffff;
  line-height: 88rpx;
  margin-bottom: 40rpx;
}

.bottom-button-container-label {
  height: 40rpx;
  font-weight: 400;
  font-size: 28rpx;
  line-height: 40rpx;
}

.course-list-wrap {
  box-sizing: border-box;
  width: 100%;
  padding-bottom: env(safe-area-inset-bottom);
}

.course-content {
  width: 690rpx;
  height: 620rpx;
  background: rgba(86, 75, 78, 0.04);
  border-radius: 8rpx;
  margin-left: auto;
  margin-right: auto;
  margin-top: 40rpx;
  box-sizing: border-box;
}

.course-content-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  font-weight: 400;
  line-height: 40rpx;
  height: 80rpx;
  padding: 0 20rpx;
}

.course-content-header .step {
  font-weight: 500;
  color: var(--primary-color-text);
}

.course-content-header .del {
  font-weight: 400;
  color: #FB6090;
  padding: 20rpx 0;
}

.course-content-div {
  width: 690rpx;
  height: 1rpx;
  background: #E8E8E8;
}

.course-content-body {
  display: flex;
  flex-direction: column;
}

.plus-item {
  width: 200rpx;
  height: 200rpx;
  border-radius: 4rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #EFEFEF;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.picture-add {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.description-input {
  width: 630rpx;
  height: 240rpx;
  background: #EFEFEF;
  border-radius: 6rpx;
  margin-top: 30rpx;
  margin-left: auto;
  margin-right: auto;
  box-sizing: border-box;
  padding: 20rpx 30rpx;
}

.course-img {
  width: 200rpx;
  height: 200rpx;
  margin-top: 30rpx;
  margin-left: 30rpx;
}

.course-add-bg {
  position: absolute;
  width: 690rpx;
  height: 150rpx;
}

.course-add {
  width: 690rpx;
  height: 150rpx;
  margin-left: auto;
  margin-right: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-top: 40rpx;
  margin-bottom: 168rpx;
}

.course-add-label {
  font-size: 28rpx;
  font-weight: 400;
  color: #B2B2B2;
  line-height: 40rpx;
  margin-top: 20rpx;
}