<view class="container">
  <van-nav-bar placeholder title="" fixed border="{{false}}" z-index="{{14}}"
    custom-style="--nav-bar-background-color: #f5f5f5;">
    <view slot="left" class="leftIcon" bindtap="ClickBack">
      <text class="iconfont icon-fanhuiiblack"></text>
    </view>
  </van-nav-bar>
  <view class="introduce-input-box">
    <view class="introduce-input-label">正文</view>
    <textarea value="{{introduce}}" class="introduce-content" placeholder="快来介绍下你要分享的内容~"
        placeholder-style="font-size: 28rpx;font-weight: 400;color: #888888 !important;" bindinput="bindIntroduceInput"
        disable-default-padding="{{true}}" maxlength="{{-1}}" show-confirm-bar="{{false}}"></textarea>
  </view>

  <view class="bottom-button-container">
    <button class="bottom-button" style="margin-bottom: {{showGuide?116:40}}rpx;" hover-class="botton-hover"
      bindtap="handleSave">
      <text class="bottom-button-container-label">保存</text>
    </button>
  </view>

</view>