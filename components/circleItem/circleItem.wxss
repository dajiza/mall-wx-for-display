/* components/orderGoods/circleItem.wxss */
@import '../../app.wxss';
.order-goods {
    width: 100%;
}
.product {
    position: relative;
    margin-bottom: 30rpx;
}
.product .goods-info {
    display: flex;
}
.product .timg {
    overflow: hidden;
    flex: 0 0 auto;
    margin-right: 20rpx;
    width: 130rpx;
    height: 130rpx;
}
.product .info {
    flex: 1 1 auto;
    margin-right: 52rpx;
    min-width: 0;
}
.product .info .title {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    justify-content: space-between;
    height: 80rpx;

    -webkit-line-clamp: 2;
    /* margin-top: -4rpx; */
    /* height: 80rpx; */
    /* font-size: 28rpx; */
}
.product .info .specification {
    overflow: hidden;
    margin-top: 16rpx;
    height: 30rpx;
    color: var(--tip-color-text);
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 24rpx;
}

.product .price {
    /* font-size: 28rpx; */
}
.product .price .symbol {
    /* margin-right: 6rpx; */
    font-size: 24rpx;
}
.product .price .price-num {
    /* position: relative;
    top: 2rpx;
    padding-left: 4rpx; */
}
.product .num {
    margin-top: 14rpx;
    font-size: 26rpx;
}

.product .digital {
    flex: 0 0 auto;
    /* flex-shrink: 0; */
    /* width: 150rpx; */
    text-align: right;
    /* flex: 1 0 92rpx; */
}
.product .digital .use-coupon {
    margin-top: 10rpx;
    margin-left: auto;
    width: 80rpx;
    height: 28rpx;
    border: 2rpx solid var(--primary-color);
    color: var(--features-color-text);
    font-size: 20rpx;
    line-height: 26rpx;
}
.product .digital .use-coupon.hidden {
    border: none;
    color: #fff;
}

.content-wrap {
    display: flex;
    margin-bottom: 20rpx;
    padding: 30rpx 0;
    width: 100%;
    background: #ffffff;
}
.circle-item .left-box {
    box-sizing: border-box;
    padding-left: 30rpx;
    width: 130rpx;
}
.circle-item .left-box .head-img-wrap {
    position: relative;
    width: 84rpx;
    height: 84rpx;
}
.circle-item .left-box .head-img-wrap .v-img {
    position: absolute;
    right: 0;
    bottom: 0;
    width: 34rpx;
    height: 34rpx;
}
.circle-item .left-box .head-img {
    display: block;
    width: 84rpx;
    height: 84rpx;
    border-radius: 50%;
    vertical-align: top;
}
.circle-item .right-box {
    width: 590rpx;
}
.circle-item .right-box .name-score {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 48rpx;
}
.circle-item .right-box .name-box {
    width: 360rpx;
    height: 44rpx;
    color: var(--primary-color-text);
    font-weight: 500;
    line-height: 44rpx;
}
.circle-item .right-box .reviews-img {
    display: inline-block;
    margin-left: auto;
    width: 48rpx;
    height: 48rpx;
    vertical-align: top;
}
.circle-item .right-box .paddingRight20 {
    padding-right: 20rpx;
}
.circle-item .right-box .score-box {
    display: inline-block;
    margin-left: 20rpx;
    padding: 0 12rpx;
    height: 44rpx;
    border-radius: 8rpx;
    background: rgba(var(--secondary-color-blue-opacity), 0.12);
    color: var(--secondary-color-blue);
    font-size: 22rpx;
    line-height: 44rpx;
}
.circle-item .right-box .text-box {
    margin-top: 12rpx;
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
}
.circle-item .right-box .text-box-copy {
    position: fixed;
    top: -99999px;
    left: -9999px;
    z-index: -999;
    width: 590rpx;
}
.circle-item .right-box .open-close-box {
}
.circle-item .right-box .open-close-text {
    padding-top: 20rpx;
    width: 200rpx;
    height: 40rpx;
    color: var(--features-color-text);
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
}
.circle-item .right-box .img-list-wrap {
    display: flex;
    flex-wrap: wrap;
    margin-top: 2rpx;
    width: 100%;
    /*justify-content: space-between;*/
}
.img-list-wrap .only-one {
    display: block;
    margin-top: 12rpx;
    width: 320rpx;
    height: 320rpx;
    vertical-align: top;
}
.img-list-wrap .img-item {
    display: block;
    margin: 12rpx 12rpx 0 0;
    width: 160rpx;
    height: 160rpx;
    vertical-align: top;
}
.circle-item .video-wrap {
    position: relative;
    margin-top: 14rpx;
    width: 400rpx;
    height: 400rpx;
    background-color: #000;
}
.circle-item .video-wrap .video {
    position: absolute;
    /*z-index: 2;*/
    width: 100%;
    height: 400rpx;
}
.circle-item .time-more-wrap {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-top: 28rpx;
    width: 100%;
    height: 40rpx;
}
.operating-wrap {
    position: absolute;
    right: 84rpx;
    display: flex;
    flex-wrap: wrap;
    box-sizing: border-box;
    padding-bottom: 14rpx;
    border-radius: 8rpx;
    /*width: 508rpx;*/
    background: rgba(0, 0, 0, 0.7);
    color: #fff;
}
.col-line {
    width: 2rpx;
    height: 52rpx;
    background: rgba(0, 0, 0, 0.2);
}
.operating-item {
    display: flex;
    align-items: center;
    justify-content: center;
    box-sizing: border-box;
    margin-top: 14rpx;
    width: 168rpx;
    height: 52rpx;
    border-right: 2rpx solid rgba(0, 0, 0, 0.2);
}
.operating-item .operating-text {
    margin-left: 12rpx;
}
.operating-item:nth-child(3n) {
    border-right: none;
}
.operating-item:last-child {
    border-right: none;
}
.circle-item .time-more-wrap .time-box {
    color: #b2b2b2;
    font-weight: 400;
    font-size: 24rpx;
    line-height: 34px;
}
.circle-item .time-more-wrap .more-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    box-sizing: border-box;
    padding: 0 20rpx;
    width: 64rpx;
    height: 40rpx;
    border-radius: 4px;
    background: rgba(0, 0, 0, 0.05);
}
.point {
    width: 8rpx;
    height: 8rpx;
    border-radius: 100%;
    background: rgba(86, 75, 78, 0.8);
}
.teacher-reviews-wrap {
    margin-top: 28rpx;
    color: var(--primary-color-text);
    font-size: 14px;
    line-height: 40rpx;
}
.like-comment-wrap {
    box-sizing: border-box;
    margin-top: 28rpx;
    padding: 8rpx 20rpx;
    width: 590rpx;
    border-radius: 8px;
    background: rgba(0, 0, 0, 0.05);
}
.marginTop20 {
    margin-top: 20rpx !important;
}
.like-comment-wrap .like-wrap {
    position: relative;
    color: var(--primary-color-text);
    font-weight: 500;
    font-size: 28rpx;
    line-height: 40rpx;
}

.zan-icon-box {
    position: absolute;
    display: flex;
    align-items: center;
    width: 40rpx;
    height: 40rpx;
}
.like-names {
    text-indent: 44rpx;
}
.like-comment-wrap .marginLeft8 {
    margin-left: 8rpx;
}
.like-comment-wrap .row-line {
    margin: 16rpx 0;
    width: 100%;
    height: 2rpx;
    background: var(--tip-color-text-d8);
}
.like-comment-wrap .comment-wrap {
}
.like-comment-wrap .comment-wrap .comment-item {
    margin-bottom: 16rpx;
    color: var(--primary-color-text);
    font-weight: 500;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
    /*font-family: PingFangSC-Medium, PingFang SC;*/
}
.comment-item .margin8 {
    margin: 0 8rpx;
}
.fontWeight500 {
    font-weight: 500;
    /*font-family: PingFangSC-Medium, PingFang SC;*/
}
.like-comment-wrap .comment-wrap .comment-item:last-child {
    margin-bottom: 0;
}
