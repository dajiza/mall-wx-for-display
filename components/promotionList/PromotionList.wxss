@import '../../app.wxss';

.custom-pop-promotion {
    border-radius: 30rpx 30rpx 0px 0px;
}

.custom-pop-promotion .promotion {
    max-height: 1118rpx;
    width: 100%;
}

.promotion-main {
    box-sizing: border-box;
    padding: 30rpx;
    width: 100%;
    background-color: #fff;
    transition: all 600ms;
}

.promotion-main-header {
    position: relative;
    display: flex;
}

.promotion-main-header .timg {
    overflow: hidden;
    flex: 0 0 auto;
    margin-right: 32rpx;
    width: 200rpx;
    height: 200rpx;
    border-radius: 10rpx;
}

.promotion-main-header .timg .fullimg {
    width: 100%;
    height: 100%;
}

.promotion-close {
    position: absolute;
    top: -30rpx;
    right: -30rpx;
    padding: 30rpx;
    color: var(--primary-color-text);
    font-size: 32rpx;
}

.promotion-main-header .label-wrap {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    height: 200rpx;
}

.promotion-main-header .label-wrap .price-wrap {
    display: flex;
    align-items: baseline;
    margin-top: 10rpx;
}
.promotion-main-header .label-wrap .price-wrap .price-now-unit {
    color: var(--primary-color);
    font-weight: 600;
    font-size: 32rpx;
    line-height: 44rpx;
}

.promotion-main-header .label-wrap .price-wrap .price-now {
    color: var(--primary-color);
    font-weight: 600;
    font-size: 48rpx;
    line-height: 66rpx;
}

.promotion-main-header .label-wrap .arrt-label {
    color: var(--tip-color-text-88);
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
}

.promotion-main .big-btn {
    margin-top: 40rpx !important;
    margin-bottom: 140rpx !important;
    width: 100% !important;
}

.promotion-main .tip {
    margin-top: 53rpx;
    margin-bottom: 40rpx;
    color: var(--primary-color-text);
    font-weight: 500;
    font-size: 28rpx;
    line-height: 40rpx;
}

.promotion-radio-root {
    box-sizing: border-box;
    padding-right: 60rpx;
    padding-bottom: 40rpx;

    --radio-label-margin: 20rpx;
}

.promotion-radio-root-multi {
    align-items: flex-start !important;
}

.promotion-radio-label {
    color: var(--primary-color-text);
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;
    /* white-space: pre; */
}
