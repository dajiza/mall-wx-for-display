.info {
  position: relative;
  padding-top: 100%;
  background: transparent;
  box-sizing: border-box; }
  .info__item {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    overflow: hidden;
    box-sizing: border-box; }
    .info__item .image {
      width: calc(100% - 12rpx);
      height: calc(100% - 12rpx);
      box-sizing: border-box;
      margin-top: 12rpx; }
     .info__item .delete-image{
      width: 36rpx;
      height: 36rpx;} 