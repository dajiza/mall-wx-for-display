.comment-box .user-info-wrap {
    display: flex;
    align-items: center;
    margin-bottom: 20rpx;
}
.user-info-wrap .user-head-img {
    display: block;
    width: 76rpx;
    height: 76rpx;
    border-radius: 100%;
    vertical-align: bottom;
}
.comment-box .user-info-wrap .user-info-second-wrap {
    margin-left: 16rpx;
    width: 578rpx;
    height: 100%;
}
.text-ellipsis {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.comment-box .user-info-wrap .user-info-second-wrap .user-info-name {
    width: 100%;
    height: 40rpx;
    color: #564b4e;
    font-weight: 500;
    font-size: 28rpx;
    font-family: PingFangSC-Medium, PingFang SC;
    line-height: 40rpx;
}

.comment-box .user-info-wrap .user-info-second-wrap .user-info-extra {
    display: flex;
    align-items: center;
    color: #b2b2b2;
    font-weight: 400;
    font-size: 24rpx;
    font-family: PingFangSC-Regular, PingFang SC;
    line-height: 34rpx;
}

.comment-box .user-info-wrap .user-info-second-wrap .user-info-extra .s-line {
    margin: 0 12rpx;
    width: 2rpx;
    height: 20rpx;
    background: var(--tip-color-text-d8);
}

.comment-box .comment-content {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    color: var(--primary-color-text);
    text-overflow: ellipsis;
    word-break: break-all;
    font-weight: 400;
    font-size: 28rpx;
    line-height: 40rpx;

    -webkit-line-clamp: 5;
}

.comment-box .comment-img-wrap {
    display: flex;
    flex-wrap: wrap;
    margin-top: 20rpx;
    width: 100%;
}
.comment-box .comment-img-wrap .img-item {
    width: 160rpx;
    height: 160rpx;
    border-radius: 10rpx;
}
.comment-box .comment-img-wrap .video-wrap {
    position: relative;
    width: 160rpx;
    height: 160rpx;
    border-radius: 10rpx;
    background-color: #000;
}
.comment-box .comment-img-wrap .video-wrap .video {
    position: absolute;
    /*z-index: 2;*/
    width: 100%;
    height: 160rpx;
}
