/* components/searchFilter/goodsSearchFilter.wxss */
@import '../../assets/fonts/iconfont.wxss';

/*右侧滑出*/
.popup-box {
    width: 650rpx;
    height: 100%;
    background: #ffffff;
}

.popup-content-box {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    padding-bottom: calc(100rpx + env(safe-area-inset-bottom));
    height: calc(100% - 136rpx);
    background: var(--background-color);
}

.choose-cate-box {
    width: 100%;
    height: 136rpx;
    white-space: nowrap;
    background: #ffffff;
}
.cloth-or-other-wrap {
    white-space: nowrap;
    height: 100%;
}
.cloth-or-other-wrap .init{
    min-width: 170rpx;
    height: 80rpx;
    background: rgba(0, 0, 0, 0.04);
    border-radius: 40rpx;
    color: var(--primary-color-text);
    text-align: center;
    font-weight: 400;
    font-size: 32rpx;
    line-height: 80rpx;
    display: inline-block;
    margin-top: 28rpx;
    margin-left:20rpx;
    padding: 0 20rpx;
    box-sizing: border-box;
}
.cloth-or-other-wrap .placeholder-box{
    width: 20rpx;
    height: 80rpx;
    display: inline-block;
}

.cloth-or-other-wrap .type-selected {
    color: #ffffff !important;
    background: var(--primary-gradual-color);
    font-weight: 500;
}


.other-cate {
    width: 100%;
    margin-top: 24rpx;
}

/*属性容器、标签容器总*/
.attr-box,
.label-all-box {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    margin-bottom: 24rpx;
    padding: 30rpx 40rpx 40rpx;
    width: 100%;
    background: #ffffff;
}
.sons-cate-box{
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    padding: 30rpx 40rpx 40rpx;
    width: 100%;
    background: #ffffff;
}

.label-box {
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    margin-bottom: 0;
    padding: 0 0 40rpx;
    width: 100%;
}

.label-box:last-child {
    padding-bottom: 0;
}

.attr-name {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    height: 42rpx;
    color: var(--primary-color-text);
    font-weight: 500;
    font-size: 30rpx;
    line-height: 42rpx;
}

.cate-name {
    overflow: hidden;
    flex: 1;
    text-overflow: ellipsis;
    white-space: nowrap;
}

/*展开收起*/
.open-or-close {
    position: absolute;
    top: 0;
    right: -10rpx;
    width: 48rpx;
    height: 100%;
}

.click-box {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 88rpx;
    height: 62rpx;
    background: transparent;
    transform: translate(-50%, -50%);
}

.attr-list-box {
    display: flex;
    flex-wrap: wrap;
    width: 100%;
}

.attr-list-item {
    display: flex;
    align-items: center;
    justify-content: center;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    margin-top: 30rpx;
    margin-right: 30rpx;
    padding: 0 20rpx;
    width: 170rpx;
    height: 80rpx;
    border: 2rpx solid transparent;
    border-radius: 40rpx;
    background: rgba(0, 0, 0, 0.04);
    color: var(--primary-color-text);
}

.attr-list-item:nth-child(3n) {
    margin-right: 0;
}

/*选中*/
.is-selected {
    border: 1rpx solid var(--primary-color);
    background: var(--selected-round-background);
    color: var(--features-color-text);
}

.name-text {
    width: 100%;
    text-align: center;
    word-break: break-all;
    font-weight: 400;
    font-size: 24rpx;
    line-height: 30rpx;
}

.text-overflow-2 {
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    text-overflow: ellipsis;
    white-space: normal !important;
    word-wrap: break-word;

    -webkit-line-clamp: 2;
}

.font-26 {
    font-size: 26rpx;
    line-height: 36rpx;
}

.cate-name {
    overflow: hidden;
    flex: 1;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.placeholder-box {
    width: 100%;
    height: 46rpx;
}

/*重置-确认按钮*/
.bottom-btn-box {
    position: absolute;
    bottom: 0;
    left: 0;
    padding-bottom: env(safe-area-inset-bottom);
    width: 100%;
    height: 100rpx;
    background: #ffffff;
    box-shadow: 0 -1px 0 0 rgba(0, 0, 0, 0.06);
}
.bottom-box-content {
    display: flex;
    align-items: center;
    justify-content: space-between;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    padding: 0 40rpx 2rpx;
    width: 100%;
    height: 100rpx;
}

.btn-reset,
.btn-sure {
    width: 276rpx !important;
    height: 76rpx !important;
    line-height: 76rpx !important;
}

.van-button--round.van-button--normal.van-button--warning {
    background: var(--primary-gradual-color);
}
.paddingTop0 {
    padding-top: 0;
}
::-webkit-scrollbar{
    width: 0;
    height: 0;
    color: transparent;
}